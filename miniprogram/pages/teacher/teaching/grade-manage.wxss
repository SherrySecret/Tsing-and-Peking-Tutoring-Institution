page {
  box-sizing: border-box;
}

.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f5f5f5;
  width: 100%;
  box-sizing: border-box;
}

.content {
  flex: 1;
  padding: 0 32rpx 32rpx 32rpx;
  width: 100%;
}

.flex {
  display: flex;
}

.items-center {
  align-items: center;
}

.mr-2 {
  margin-right: 16rpx;
}

.flex-shrink-0 {
  flex-shrink: 0;
}

/* 筛选栏 */
.filter-bar {
  display: flex;
  gap: 32rpx;
  margin-bottom: 32rpx;
  width: 100%;
  align-items: flex-end;
}

.filter-item {
  flex: 1;
}

.filter-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.picker-view {
  background-color: #fff;
  border: 1rpx solid #e5e5e5;
  border-radius: 16rpx;
  padding: 16rpx 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #333;
  width: 100%;
}

.picker-view i {
  color: #999;
  font-size: 24rpx;
}

/* 成绩卡片 */
.grade-list {
  margin-bottom: 40rpx;
  width: 100%;
}

.grade-card {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 32rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  width: 100%;
}

.card-header {
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
  width: 100%;
}

.header-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
  width: 100%;
}

.header-title text {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  flex: 1;
}

.status-tag {
  font-size: 24rpx;
  color: #fff;
  padding: 4rpx 16rpx;
  border-radius: 24rpx;
  flex-shrink: 0;
}

.status-tag.completed {
  background-color: #00a870;
}

.status-tag.incomplete {
  background-color: #ff7d00;
}

.exam-date {
  font-size: 28rpx;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.card-content {
  padding: 32rpx;
  width: 100%;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
  text-align: center;
  margin-bottom: 32rpx;
  width: 100%;
}

.stat-item {
  text-align: center;
}

.stat-value {
  font-size: 36rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.stat-value.avg {
  color: #0052d9;
}

.stat-value.high {
  color: #00a870;
}

.stat-value.low {
  color: #ff7d00;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.grade-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

.grade-class {
  font-size: 28rpx;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.grade-action {
  font-size: 28rpx;
  color: #0052d9;
  display: flex;
  align-items: center;
  flex-shrink: 0;
}

.grade-action i {
  margin-left: 8rpx;
}

.grade-count {
  font-size: 28rpx;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.enter-grade {
  display: flex;
  justify-content: center;
  padding: 32rpx 0;
  width: 100%;
}

.enter-button {
  background-color: #0052d9;
  color: #fff;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx 32rpx;
  border-radius: 8rpx;
  line-height: 1.5;
}

.enter-button::after {
  display: none;
}

.enter-button i {
  margin-right: 8rpx;
}

/* 无数据提示 */
.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
  width: 100%;
}

.empty-tip image {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 32rpx;
}

.empty-tip text {
  font-size: 28rpx;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.add-button {
  display: flex;
  align-items: center;
  color: #0052d9;
  font-size: 28rpx;
  flex-shrink: 0;
}

.add-button i {
  margin-right: 8rpx;
} 