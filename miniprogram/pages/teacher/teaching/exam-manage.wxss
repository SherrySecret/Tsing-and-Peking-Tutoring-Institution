page {
  box-sizing: border-box;
}

.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f5f5f5;
  width: 100%;
  box-sizing: border-box;
}

.content {
  flex: 1;
  padding: 0 32rpx 32rpx 32rpx;
  width: 100%;
}

.flex {
  display: flex;
}

.items-center {
  align-items: center;
}

.mr-2 {
  margin-right: 16rpx;
}

.flex-shrink-0 {
  flex-shrink: 0;
}

/* 筛选栏 */
.filter-bar {
  display: flex;
  margin-bottom: 32rpx;
  gap: 32rpx;
  width: 100%;
  align-items: center;
}

.filter-item {
  flex: 1;
}

.create-button {
  display: flex;
  align-items: center;
  background-color: #0052d9;
  color: #fff;
  font-size: 28rpx;
  padding: 12rpx 24rpx;
  border-radius: 32rpx;
  flex-shrink: 0;
}

.create-button i {
  margin-right: 8rpx;
  font-size: 28rpx;
}

.picker-view {
  background-color: #fff;
  border: 1rpx solid #e5e5e5;
  border-radius: 16rpx;
  padding: 16rpx 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #333;
  width: 100%;
}

.picker-view i {
  color: #999;
  font-size: 24rpx;
}

/* 考试列表 */
.exam-list {
  margin-bottom: 40rpx;
  width: 100%;
}

.exam-item {
  margin-bottom: 32rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background-color: #fff;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  width: 100%;
}

.exam-content {
  padding: 32rpx;
  position: relative;
  border-left: 8rpx solid transparent;
  width: 100%;
}

.exam-content.upcoming {
  border-color: #0052d9;
}

.exam-content.completed {
  border-color: #00a870;
}

.exam-content.pending {
  border-color: #9c27b0;
}

.exam-info {
  padding-right: 160rpx;
  width: 100%;
}

.exam-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.exam-subject {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.exam-time, .exam-location {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
  margin-top: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.exam-time i, .exam-location i {
  font-size: 28rpx;
  margin-right: 12rpx;
  flex-shrink: 0;
}

.exam-status {
  position: absolute;
  top: 32rpx;
  right: 32rpx;
}

.status-text {
  font-size: 24rpx;
  color: #fff;
  padding: 4rpx 16rpx;
  border-radius: 24rpx;
}

.status-text.upcoming {
  background-color: #0052d9;
}

.status-text.completed {
  background-color: #00a870;
}

.status-text.pending {
  background-color: #9c27b0;
}

.exam-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  background-color: #f9f9f9;
  border-top: 1rpx solid #f0f0f0;
  width: 100%;
}

.exam-teacher {
  font-size: 26rpx;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.exam-action {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #0052d9;
  flex-shrink: 0;
}

.exam-action i {
  margin-left: 8rpx;
}

/* 无数据提示 */
.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
  width: 100%;
}

.empty-tip image {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 32rpx;
}

.empty-tip text {
  font-size: 28rpx;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
} 