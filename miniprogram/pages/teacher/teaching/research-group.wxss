page {
  box-sizing: border-box;
}

.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f5f5f5;
  width: 100%;
  box-sizing: border-box;
}

.content {
  flex: 1;
  padding: 0 32rpx 32rpx 32rpx;
  width: 100%;
}

.flex {
  display: flex;
}

.items-center {
  align-items: center;
}

.mr-2 {
  margin-right: 16rpx;
}

.flex-shrink-0 {
  flex-shrink: 0;
}

/* 我的教研组 */
.my-group {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  width: 100%;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.group-card {
  display: flex;
  align-items: center;
  background-color: #f0f6ff;
  border-radius: 16rpx;
  padding: 32rpx;
  width: 100%;
}

.group-icon {
  width: 96rpx;
  height: 96rpx;
  border-radius: 48rpx;
  background-color: #e0edff;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.group-icon i {
  font-size: 48rpx;
  color: #0052d9;
}

.group-info {
  flex: 1;
  overflow: hidden;
}

.group-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.group-meta {
  font-size: 26rpx;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.group-arrow {
  color: #0052d9;
  flex-shrink: 0;
}

/* 活动列表 */
.activities {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
  width: 100%;
}

.section-header {
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
  width: 100%;
}

.activity-list {
  padding: 0 32rpx;
  width: 100%;
}

.activity-item {
  padding: 32rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  width: 100%;
}

.activity-item:last-child {
  border-bottom: none;
}

.activity-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  width: 100%;
}

.activity-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  flex: 1;
}

.activity-status {
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: 24rpx;
  flex-shrink: 0;
}

.activity-status.upcoming {
  color: #0052d9;
  background-color: rgba(0, 82, 217, 0.1);
}

.activity-status.completed {
  color: #00a870;
  background-color: rgba(0, 168, 112, 0.1);
}

.activity-topic {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.activity-meta {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  width: 100%;
}

.meta-item {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.meta-item i {
  font-size: 32rpx;
  color: #999;
  margin-right: 12rpx;
  flex-shrink: 0;
}

/* 教研资料 */
.materials {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
  width: 100%;
}

.material-list {
  padding: 0 32rpx;
  width: 100%;
}

.material-item {
  display: flex;
  align-items: center;
  padding: 32rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  width: 100%;
}

.material-item:last-child {
  border-bottom: none;
}

.material-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.material-icon.pdf {
  background-color: rgba(0, 82, 217, 0.1);
}

.material-icon.pdf i {
  color: #0052d9;
}

.material-icon.word {
  background-color: rgba(0, 168, 112, 0.1);
}

.material-icon.word i {
  color: #00a870;
}

.material-icon.other {
  background-color: rgba(153, 153, 153, 0.1);
}

.material-icon.other i {
  color: #999;
}

.material-info {
  flex: 1;
  overflow: hidden;
}

.material-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.material-date {
  font-size: 24rpx;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.material-download {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
  flex-shrink: 0;
} 