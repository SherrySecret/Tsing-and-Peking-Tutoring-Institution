.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f5f5f5;
}

.header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 44px;
  padding: 8px 16px;
  background-color: #fff;
  border-bottom: 1px solid #eee;
  z-index: 100;
  display: flex;
  align-items: center;
}

.title {
  font-size: 18px;
  font-weight: 500;
  color: #333;
}

.content {
  flex: 1;
  padding: 16px;
  margin-top: 44px;
}

.flex {
  display: flex;
}

.items-center {
  align-items: center;
}

.mr-2 {
  margin-right: 8px;
}

.flex-shrink-0 {
  flex-shrink: 0;
}

/* 我的教研组 */
.my-group {
  background-color: #fff;
  border-radius: 8px;
  padding: 16px;
  margin-bottom: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 16px;
  font-weight: 500;
  color: #333;
  margin-bottom: 12px;
}

.group-card {
  display: flex;
  align-items: center;
  background-color: #f0f6ff;
  border-radius: 8px;
  padding: 16px;
}

.group-icon {
  width: 48px;
  height: 48px;
  border-radius: 24px;
  background-color: #e0edff;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 12px;
}

.group-icon i {
  font-size: 24px;
  color: #0052d9;
}

.group-info {
  flex: 1;
}

.group-name {
  font-size: 16px;
  font-weight: 500;
  color: #333;
  margin-bottom: 4px;
}

.group-meta {
  font-size: 13px;
  color: #666;
}

.group-arrow {
  color: #0052d9;
}

/* 活动列表 */
.activities {
  background-color: #fff;
  border-radius: 8px;
  margin-bottom: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.section-header {
  padding: 16px;
  border-bottom: 1px solid #f0f0f0;
}

.activity-list {
  padding: 0 16px;
}

.activity-item {
  padding: 16px 0;
  border-bottom: 1px solid #f0f0f0;
}

.activity-item:last-child {
  border-bottom: none;
}

.activity-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8px;
}

.activity-title {
  font-size: 16px;
  font-weight: 500;
  color: #333;
}

.activity-status {
  font-size: 12px;
  padding: 2px 8px;
  border-radius: 12px;
}

.activity-status.upcoming {
  color: #0052d9;
  background-color: rgba(0, 82, 217, 0.1);
}

.activity-status.completed {
  color: #00a870;
  background-color: rgba(0, 168, 112, 0.1);
}

.activity-topic {
  font-size: 14px;
  color: #666;
  margin-bottom: 8px;
}

.activity-meta {
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.meta-item {
  display: flex;
  align-items: center;
  font-size: 13px;
  color: #666;
}

.meta-item i {
  font-size: 16px;
  color: #999;
  margin-right: 6px;
}

/* 教研资料 */
.materials {
  background-color: #fff;
  border-radius: 8px;
  margin-bottom: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.material-list {
  padding: 0 16px;
}

.material-item {
  display: flex;
  align-items: center;
  padding: 16px 0;
  border-bottom: 1px solid #f0f0f0;
}

.material-item:last-child {
  border-bottom: none;
}

.material-icon {
  width: 40px;
  height: 40px;
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 12px;
}

.material-icon.pdf {
  background-color: rgba(0, 82, 217, 0.1);
}

.material-icon.pdf i {
  color: #0052d9;
}

.material-icon.word {
  background-color: rgba(0, 168, 112, 0.1);
}

.material-icon.word i {
  color: #00a870;
}

.material-icon.other {
  background-color: rgba(153, 153, 153, 0.1);
}

.material-icon.other i {
  color: #999;
}

.material-info {
  flex: 1;
}

.material-title {
  font-size: 15px;
  font-weight: 500;
  color: #333;
  margin-bottom: 4px;
}

.material-date {
  font-size: 12px;
  color: #999;
}

.material-download {
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
} 