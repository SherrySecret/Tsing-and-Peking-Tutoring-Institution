.container {
  min-height: 100vh;
  background-color: #f7f8fa;
}

.header {
  position: relative;
  height: 88rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  padding: 0 30rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}

.title {
  font-size: 34rpx;
  font-weight: 500;
  color: #333;
}

.content {
  padding: 30rpx;
  padding-bottom: 60rpx;
}

/* 班级选择器 */
.class-selector {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.03);
}

.selector-left {
  display: flex;
  align-items: center;
}

.selector-label {
  font-size: 28rpx;
  color: #888;
  margin-right: 20rpx;
}

.selector-value {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.selector-right {
  color: #bbb;
}

/* 考勤统计卡片 */
.stats-card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.03);
}

.stats-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.stats-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.date-selector {
  display: flex;
  align-items: center;
  color: #0052d9;
  font-size: 28rpx;
}

.date-selector i {
  margin-left: 10rpx;
}

.stats-content {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.stat-item {
  flex: 1;
  text-align: center;
}

.stat-value {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.stat-value.present {
  color: #19be6b;
}

.stat-value.absent {
  color: #fa3534;
}

.stat-value.late {
  color: #ff9f00;
}

.stat-label {
  font-size: 24rpx;
  color: #888;
}

.attendance-rate {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.rate-label {
  font-size: 26rpx;
  color: #888;
  margin-right: 10rpx;
}

.rate-value {
  font-size: 26rpx;
  color: #19be6b;
  font-weight: 500;
  margin-right: 20rpx;
}

.rate-progress {
  width: 100%;
  height: 6rpx;
  background-color: #eee;
  border-radius: 3rpx;
  margin-top: 20rpx;
  overflow: hidden;
}

.rate-bar {
  height: 100%;
  background-color: #19be6b;
  border-radius: 3rpx;
}

/* 考勤操作 */
.action-card {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.action-button {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx 0;
  margin: 0 15rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.03);
  position: relative;
  line-height: 1;
}

.action-button::after {
  display: none;
}

.action-button i {
  font-size: 48rpx;
  margin-bottom: 16rpx;
  color: #666;
}

.action-button text {
  font-size: 26rpx;
  color: #666;
}

.action-button.primary i,
.action-button.primary text {
  color: #0052d9;
}

/* 考勤记录 */
.record-card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.03);
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  flex-wrap: wrap;
}

.record-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 10rpx;
}

.record-filter {
  display: flex;
}

.filter-item {
  font-size: 28rpx;
  color: #666;
  margin-left: 20rpx;
  padding-bottom: 8rpx;
  position: relative;
}

.filter-item.active {
  color: #0052d9;
  font-weight: 500;
}

.filter-item.active::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background-color: #0052d9;
  border-radius: 2rpx;
}

.student-search {
  position: relative;
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 40rpx;
  padding: 0 20rpx;
  margin-bottom: 30rpx;
}

.student-search i {
  color: #999;
}

.student-search input {
  flex: 1;
  height: 80rpx;
  margin: 0 20rpx;
  font-size: 28rpx;
}

.student-list {
  margin-bottom: 20rpx;
}

.student-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.student-item:last-child {
  border-bottom: none;
}

.student-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.student-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-right: 20rpx;
}

.info-content {
  flex: 1;
}

.student-name {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 6rpx;
}

.student-id {
  font-size: 24rpx;
  color: #999;
}

.attendance-status {
  font-size: 26rpx;
  font-weight: 500;
  width: 100rpx;
  text-align: center;
}

.attendance-status.present {
  color: #19be6b;
}

.attendance-status.absent {
  color: #fa3534;
}

.attendance-status.late {
  color: #ff9f00;
}

.attendance-actions {
  display: flex;
  margin-left: 30rpx;
}

.status-button {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f5f5f5;
  margin-left: 10rpx;
  color: #bbb;
}

.status-button.active {
  color: #fff;
}

.status-button.active[data-status="present"] {
  background-color: #19be6b;
}

.status-button.active[data-status="absent"] {
  background-color: #fa3534;
}

.status-button.active[data-status="late"] {
  background-color: #ff9f00;
}

/* 无数据展示 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 工具类 */
.flex {
  display: flex;
}

.items-center {
  align-items: center;
}

.flex-shrink-0 {
  flex-shrink: 0;
}

.mr-2 {
  margin-right: 16rpx;
} 