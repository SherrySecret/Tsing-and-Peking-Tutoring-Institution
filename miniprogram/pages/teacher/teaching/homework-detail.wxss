.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f5f5f5;
}

.header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 44px;
  padding: 8px 16px;
  background-color: #fff;
  border-bottom: 1px solid #eee;
  z-index: 100;
  display: flex;
  align-items: center;
}

.title {
  font-size: 18px;
  font-weight: 500;
  color: #333;
}

.content {
  flex: 1;
  padding: 16px;
  margin-top: 44px;
  margin-bottom: 60px; /* 为底部操作栏留出空间 */
}

.flex {
  display: flex;
}

.items-center {
  align-items: center;
}

.mr-2 {
  margin-right: 8px;
}

.flex-shrink-0 {
  flex-shrink: 0;
}

/* 作业信息卡片 */
.homework-card {
  background-color: #fff;
  border-radius: 8px;
  padding: 16px;
  margin-bottom: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.homework-title {
  font-size: 18px;
  font-weight: 500;
  color: #333;
  margin-bottom: 12px;
}

.homework-meta {
  margin-bottom: 12px;
}

.meta-item {
  display: flex;
  align-items: center;
  margin-bottom: 8px;
}

.meta-item i {
  font-size: 16px;
  color: #0052d9;
  margin-right: 8px;
}

.meta-item text {
  font-size: 14px;
  color: #666;
}

.homework-description {
  font-size: 14px;
  color: #333;
  line-height: 1.5;
  margin-bottom: 12px;
}

.homework-files {
  margin-top: 16px;
}

.files-title {
  font-size: 15px;
  font-weight: 500;
  color: #333;
  margin-bottom: 8px;
}

.file-item {
  display: flex;
  align-items: center;
  padding: 8px 0;
  border-bottom: 1px solid #f0f0f0;
}

.file-item i {
  font-size: 20px;
  color: #0052d9;
  margin-right: 8px;
}

.file-name {
  font-size: 14px;
  color: #0052d9;
  text-decoration: underline;
}

/* 统计卡片 */
.stats-card {
  background-color: #fff;
  border-radius: 8px;
  padding: 16px;
  margin-bottom: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.stats-title {
  font-size: 16px;
  font-weight: 500;
  color: #333;
  margin-bottom: 16px;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 8px;
  margin-bottom: 16px;
}

.stat-item {
  text-align: center;
  padding: 8px 0;
}

.stat-value {
  font-size: 18px;
  font-weight: 500;
  color: #0052d9;
  margin-bottom: 4px;
}

.stat-label {
  font-size: 12px;
  color: #999;
}

.submission-progress {
  margin-top: 16px;
}

.progress-label {
  font-size: 14px;
  color: #666;
  margin-bottom: 8px;
}

.progress-bar {
  height: 8px;
  background-color: #f0f0f0;
  border-radius: 4px;
  overflow: hidden;
  margin-bottom: 8px;
}

.progress-inner {
  height: 100%;
  background-color: #0052d9;
  border-radius: 4px;
}

.progress-text {
  font-size: 12px;
  color: #666;
  text-align: right;
}

.score-distribution {
  margin-top: 16px;
}

.distribution-title {
  font-size: 14px;
  color: #666;
  margin-bottom: 8px;
}

.chart-placeholder {
  width: 100%;
  height: 160px;
}

/* 学生提交列表部分 */
.student-submission-section {
  background-color: #fff;
  border-radius: 8px;
  padding: 16px;
  margin-bottom: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16px;
}

.section-title {
  font-size: 16px;
  font-weight: 500;
  color: #333;
}

.filter-tabs {
  display: flex;
}

.tab {
  padding: 4px 10px;
  font-size: 13px;
  color: #666;
  background-color: #f0f0f0;
  border-radius: 12px;
  margin-left: 8px;
}

.tab.active {
  color: #fff;
  background-color: #0052d9;
}

.search-box {
  display: flex;
  align-items: center;
  padding: 8px 12px;
  background-color: #f5f5f5;
  border-radius: 20px;
  margin-bottom: 16px;
}

.search-box i {
  font-size: 18px;
  color: #999;
  margin-right: 8px;
}

.search-box input {
  flex: 1;
  height: 24px;
  font-size: 14px;
  color: #333;
}

.student-list {
  max-height: 400px;
  overflow-y: auto;
}

.student-item {
  display: flex;
  align-items: center;
  padding: 12px 0;
  border-bottom: 1px solid #f0f0f0;
  position: relative;
}

.student-avatar {
  width: 40px;
  height: 40px;
  border-radius: 20px;
  margin-right: 12px;
}

.student-info {
  flex: 1;
}

.student-name {
  font-size: 15px;
  color: #333;
  margin-bottom: 4px;
}

.student-meta {
  display: flex;
  flex-direction: column;
}

.student-number {
  font-size: 12px;
  color: #999;
}

.submission-time {
  font-size: 12px;
  color: #0052d9;
}

.submission-status {
  font-size: 12px;
}

.not-submitted {
  color: #ff7d00;
}

.submission-status-right {
  margin-right: 24px;
}

.status-tag {
  font-size: 13px;
  padding: 2px 8px;
  border-radius: 10px;
}

.status-tag.corrected {
  color: #00a870;
  background-color: rgba(0, 168, 112, 0.1);
}

.status-tag.uncorrected {
  color: #0052d9;
  background-color: rgba(0, 82, 217, 0.1);
}

.status-tag.not-submitted {
  color: #ff7d00;
  background-color: rgba(255, 125, 0, 0.1);
}

.t-icon-chevron-right {
  position: absolute;
  right: 0;
  color: #ccc;
  font-size: 16px;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 60px;
  background-color: #fff;
  border-top: 1px solid #eee;
  display: flex;
  padding: 8px 16px;
  box-shadow: 0 -2px 8px rgba(0, 0, 0, 0.05);
}

.action-button {
  flex: 1;
  height: 44px;
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 15px;
}

.action-button i {
  font-size: 16px;
  margin-right: 6px;
}

.action-button.primary {
  background-color: #0052d9;
  color: #fff;
  margin-left: 12px;
}

.action-button.secondary {
  background-color: #f0f0f0;
  color: #333;
} 