page {
  box-sizing: border-box;
}

.container {
  min-height: 100vh;
  background-color: #f7f8fa;
  width: 100%;
  box-sizing: border-box;
}

.content {
  flex: 1;
  padding: 0 32rpx 32rpx 32rpx;
  margin-bottom: 120rpx; /* 为底部操作栏留出空间 */
  width: 100%;
}

.flex {
  display: flex;
}

.items-center {
  align-items: center;
}

.mr-2 {
  margin-right: 16rpx;
}

.flex-shrink-0 {
  flex-shrink: 0;
}

/* 作业信息卡片 */
.homework-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  width: 100%;
}

.homework-title {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.homework-meta {
  margin-bottom: 24rpx;
  width: 100%;
}

.meta-item {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  width: 100%;
}

.meta-item i {
  font-size: 32rpx;
  color: #0052d9;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.meta-item text {
  font-size: 28rpx;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.homework-description {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  margin-bottom: 24rpx;
}

.homework-files {
  margin-top: 32rpx;
  width: 100%;
}

.files-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.file-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  width: 100%;
}

.file-item i {
  font-size: 40rpx;
  color: #0052d9;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.file-name {
  font-size: 28rpx;
  color: #0052d9;
  text-decoration: underline;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  flex: 1;
}

/* 统计卡片 */
.stats-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  width: 100%;
}

.stats-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 32rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
  margin-bottom: 32rpx;
  width: 100%;
}

.stat-item {
  text-align: center;
  padding: 16rpx 0;
}

.stat-value {
  font-size: 36rpx;
  font-weight: 500;
  color: #0052d9;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.submission-progress {
  margin-top: 32rpx;
  width: 100%;
}

.progress-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.progress-bar {
  height: 16rpx;
  background-color: #f0f0f0;
  border-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 16rpx;
  width: 100%;
}

.progress-inner {
  height: 100%;
  background-color: #0052d9;
  border-radius: 8rpx;
}

.progress-text {
  font-size: 24rpx;
  color: #666;
  text-align: right;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.score-distribution {
  margin-top: 32rpx;
  width: 100%;
}

.distribution-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.chart-placeholder {
  width: 100%;
  height: 320rpx;
}

/* 学生提交列表部分 */
.student-submission-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  width: 100%;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
  width: 100%;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.filter-tabs {
  display: flex;
  flex-wrap: wrap;
}

.tab {
  padding: 8rpx 20rpx;
  font-size: 26rpx;
  color: #666;
  background-color: #f0f0f0;
  border-radius: 24rpx;
  margin-left: 16rpx;
  margin-bottom: 8rpx;
}

.tab.active {
  color: #fff;
  background-color: #0052d9;
}

.search-box {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background-color: #f5f5f5;
  border-radius: 40rpx;
  margin-bottom: 32rpx;
  width: 100%;
}

.search-box i {
  font-size: 36rpx;
  color: #999;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.search-box input {
  flex: 1;
  height: 48rpx;
  font-size: 28rpx;
  color: #333;
}

.student-list {
  max-height: 800rpx;
  overflow-y: auto;
  width: 100%;
}

.student-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
  width: 100%;
}

.student-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.student-info {
  flex: 1;
  overflow: hidden;
}

.student-name {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.student-meta {
  display: flex;
  flex-direction: column;
}

.student-number {
  font-size: 24rpx;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.submission-time {
  font-size: 24rpx;
  color: #0052d9;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.submission-status {
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.not-submitted {
  color: #ff7d00;
}

.submission-status-right {
  margin-right: 48rpx;
}

.status-tag {
  font-size: 26rpx;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  flex-shrink: 0;
}

.status-tag.corrected {
  color: #00a870;
  background-color: rgba(0, 168, 112, 0.1);
}

.status-tag.uncorrected {
  color: #0052d9;
  background-color: rgba(0, 82, 217, 0.1);
}

.status-tag.not-submitted {
  color: #ff7d00;
  background-color: rgba(255, 125, 0, 0.1);
}

.t-icon-chevron-right {
  position: absolute;
  right: 0;
  color: #ccc;
  font-size: 32rpx;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background-color: #fff;
  border-top: 1rpx solid #eee;
  display: flex;
  padding: 16rpx 32rpx;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.05);
  width: 100%;
}

.action-button {
  flex: 1;
  height: 88rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
}

.action-button i {
  font-size: 32rpx;
  margin-right: 12rpx;
  flex-shrink: 0;
}

.action-button.primary {
  background-color: #0052d9;
  color: #fff;
  margin-left: 24rpx;
}

.action-button.secondary {
  background-color: #f0f0f0;
  color: #333;
} 