.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f5f5f5;
}

.header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 44px;
  padding: 8px 16px;
  background-color: #fff;
  border-bottom: 1px solid #eee;
  z-index: 100;
  display: flex;
  align-items: center;
}

.title {
  font-size: 18px;
  font-weight: 500;
  color: #333;
  flex: 1;
}

.upload-button {
  display: flex;
  align-items: center;
  color: #0052d9;
  font-size: 14px;
}

.upload-button i {
  margin-right: 4px;
}

.content {
  flex: 1;
  padding: 16px;
  margin-top: 44px;
}

.flex {
  display: flex;
}

.items-center {
  align-items: center;
}

.mr-2 {
  margin-right: 8px;
}

.flex-shrink-0 {
  flex-shrink: 0;
}

/* 搜索框 */
.search-box {
  display: flex;
  align-items: center;
  background-color: #f0f0f0;
  border-radius: 20px;
  padding: 8px 12px;
  margin-bottom: 16px;
}

.search-box i {
  font-size: 16px;
  color: #999;
  margin-right: 8px;
}

.search-box input {
  flex: 1;
  font-size: 14px;
  color: #333;
  height: 20px;
}

/* 分类选项卡 */
.category-tabs {
  display: flex;
  background-color: #fff;
  margin-bottom: 16px;
  border-radius: 8px;
  overflow: hidden;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 12px 0;
  font-size: 14px;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #0052d9;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 25%;
  width: 50%;
  height: 2px;
  background-color: #0052d9;
  border-radius: 1px;
}

/* 资源列表 */
.resource-list {
  margin-bottom: 20px;
}

.resource-item {
  display: flex;
  background-color: #fff;
  border-radius: 8px;
  padding: 16px;
  margin-bottom: 12px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  position: relative;
}

.resource-icon {
  width: 40px;
  height: 40px;
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 12px;
  flex-shrink: 0;
}

.resource-icon.pdf {
  background-color: rgba(0, 82, 217, 0.1);
}

.resource-icon.pdf i {
  color: #0052d9;
}

.resource-icon.word {
  background-color: rgba(0, 168, 112, 0.1);
}

.resource-icon.word i {
  color: #00a870;
}

.resource-icon.excel {
  background-color: rgba(128, 0, 255, 0.1);
}

.resource-icon.excel i {
  color: #8000ff;
}

.resource-icon i {
  font-size: 20px;
}

.resource-info {
  flex: 1;
}

.resource-title {
  font-size: 15px;
  font-weight: 500;
  color: #333;
  margin-bottom: 4px;
}

.resource-date {
  font-size: 12px;
  color: #999;
  margin-bottom: 8px;
}

.resource-stats {
  display: flex;
  font-size: 12px;
  color: #999;
}

.resource-size {
  margin-right: 12px;
}

.resource-downloads {
  margin-right: 12px;
}

.resource-more {
  color: #ccc;
  padding: 8px;
  margin: -8px;
}

.resource-more i {
  font-size: 20px;
}

/* 无数据提示 */
.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40px 0;
}

.empty-tip image {
  width: 120px;
  height: 120px;
  margin-bottom: 16px;
}

.empty-tip text {
  font-size: 14px;
  color: #999;
} 