page {
  box-sizing: border-box;
}

.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f5f5f5;
  width: 100%;
  box-sizing: border-box;
}

.content {
  flex: 1;
  padding: 0 32rpx 32rpx 32rpx;
  width: 100%;
}

.flex {
  display: flex;
}

.items-center {
  align-items: center;
}

.mr-2 {
  margin-right: 16rpx;
}

.flex-shrink-0 {
  flex-shrink: 0;
}

/* 页面顶部 */
.page-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
  width: 100%;
}

.upload-button {
  display: flex;
  align-items: center;
  color: #0052d9;
  font-size: 28rpx;
  flex-shrink: 0;
  margin-left: 20rpx;
}

.upload-button i {
  margin-right: 8rpx;
}

/* 搜索框 */
.search-box {
  display: flex;
  align-items: center;
  background-color: #f0f0f0;
  border-radius: 40rpx;
  padding: 16rpx 24rpx;
  flex: 1;
}

.search-box i {
  font-size: 32rpx;
  color: #999;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.search-box input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  height: 40rpx;
}

/* 分类选项卡 */
.category-tabs {
  display: flex;
  background-color: #fff;
  margin-bottom: 32rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  width: 100%;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.tab-item.active {
  color: #0052d9;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 25%;
  width: 50%;
  height: 4rpx;
  background-color: #0052d9;
  border-radius: 2rpx;
}

/* 资源列表 */
.resource-list {
  margin-bottom: 40rpx;
  width: 100%;
}

.resource-item {
  display: flex;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  position: relative;
  width: 100%;
}

.resource-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.resource-icon.pdf {
  background-color: rgba(0, 82, 217, 0.1);
}

.resource-icon.pdf i {
  color: #0052d9;
}

.resource-icon.word {
  background-color: rgba(0, 168, 112, 0.1);
}

.resource-icon.word i {
  color: #00a870;
}

.resource-icon.excel {
  background-color: rgba(128, 0, 255, 0.1);
}

.resource-icon.excel i {
  color: #8000ff;
}

.resource-icon i {
  font-size: 40rpx;
}

.resource-info {
  flex: 1;
  overflow: hidden;
}

.resource-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.resource-date {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.resource-stats {
  display: flex;
  font-size: 24rpx;
  color: #999;
}

.resource-size {
  margin-right: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.resource-downloads {
  margin-right: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.resource-more {
  color: #ccc;
  padding: 16rpx;
  margin: -16rpx;
  flex-shrink: 0;
}

.resource-more i {
  font-size: 40rpx;
}

/* 无数据提示 */
.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
  width: 100%;
}

.empty-tip image {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 32rpx;
}

.empty-tip text {
  font-size: 28rpx;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
} 