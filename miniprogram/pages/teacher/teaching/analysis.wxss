.container {
  min-height: 100vh;
  background-color: #f7f8fa;
}

.header {
  position: relative;
  height: 88rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  padding: 0 30rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}

.title {
  font-size: 34rpx;
  font-weight: 500;
  color: #333;
}

.content {
  padding: 30rpx;
  padding-bottom: 60rpx;
}

/* 标签切换 */
.tabs {
  position: relative;
  display: flex;
  background-color: #fff;
  height: 88rpx;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.03);
}

.tab-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #0052d9;
  font-weight: 500;
}

.tab-line {
  position: absolute;
  bottom: 0;
  width: 33.33%;
  height: 4rpx;
  background-color: #0052d9;
  transition: left 0.3s;
}

/* 数据卡片 */
.data-cards {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.data-card {
  width: 30%;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.03);
}

.card-title {
  font-size: 24rpx;
  color: #888;
  margin-bottom: 10rpx;
}

.card-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.card-unit {
  font-size: 24rpx;
  font-weight: normal;
  margin-left: 4rpx;
  color: #888;
}

.card-trend {
  display: flex;
  align-items: center;
  font-size: 22rpx;
}

.card-trend.up {
  color: #19be6b;
}

.card-trend.down {
  color: #fa3534;
}

/* 图表卡片 */
.chart-card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.03);
}

.chart-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.chart-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

.chart-legend {
  display: flex;
}

.legend-item {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
  font-size: 24rpx;
  color: #888;
}

.legend-color {
  width: 20rpx;
  height: 20rpx;
  border-radius: 4rpx;
  margin-right: 8rpx;
}

.bg-primary {
  background-color: #0052d9;
}

.bg-warning {
  background-color: #ff9d00;
}

.chart-container {
  height: 400rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.chart-placeholder {
  width: 100%;
  height: 100%;
}

/* 班级选择器 */
.class-selector {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
  padding: 20rpx 30rpx;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.03);
  font-size: 30rpx;
  color: #333;
}

/* 搜索栏 */
.search-bar {
  display: flex;
  align-items: center;
  background-color: #fff;
  height: 80rpx;
  border-radius: 40rpx;
  padding: 0 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.03);
}

.search-bar i {
  color: #888;
  margin-right: 10rpx;
}

.search-bar input {
  flex: 1;
  height: 80rpx;
  font-size: 28rpx;
}

/* 学生列表 */
.student-list {
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.03);
}

.student-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.student-item:last-child {
  border-bottom: none;
}

.student-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-right: 20rpx;
}

.student-info {
  flex: 1;
  margin-right: 20rpx;
}

.student-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 6rpx;
}

.student-class {
  font-size: 24rpx;
  color: #888;
}

.student-stats {
  display: flex;
  margin-right: 20rpx;
}

.student-stat {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 30rpx;
}

.student-stat:last-child {
  margin-right: 0;
}

.stat-label {
  font-size: 22rpx;
  color: #888;
  margin-bottom: 4rpx;
}

.stat-value {
  font-size: 26rpx;
  font-weight: 500;
}

.stat-value.good {
  color: #19be6b;
}

.stat-value.medium {
  color: #ff9d00;
}

.stat-value.bad {
  color: #fa3534;
}

.arrow-icon {
  color: #bbb;
  font-size: 24rpx;
}

/* 工具类 */
.flex {
  display: flex;
}

.items-center {
  align-items: center;
}

.flex-shrink-0 {
  flex-shrink: 0;
}

.mr-2 {
  margin-right: 16rpx;
} 