page {
  box-sizing: border-box;
}

.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f5f5f5;
  width: 100%;
  box-sizing: border-box;
}

.content {
  flex: 1;
  padding: 0 32rpx 32rpx 32rpx;
  width: 100%;
}

.flex {
  display: flex;
}

.items-center {
  align-items: center;
}

.mr-2 {
  margin-right: 16rpx;
}

.flex-shrink-0 {
  flex-shrink: 0;
}

.filter-bar {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  width: 100%;
}

.filter-options {
  display: flex;
  margin-bottom: 24rpx;
  width: 100%;
  flex-wrap: wrap;
}

.filter-item {
  padding: 12rpx 24rpx;
  margin-right: 16rpx;
  font-size: 28rpx;
  color: #666;
  border-radius: 32rpx;
  background-color: #f0f0f0;
  margin-bottom: 12rpx;
}

.filter-item.active {
  color: #fff;
  background-color: #0052d9;
}

.search-box {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background-color: #f5f5f5;
  border-radius: 40rpx;
  width: 100%;
}

.search-box i {
  font-size: 36rpx;
  color: #999;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.search-box input {
  flex: 1;
  height: 48rpx;
  font-size: 28rpx;
  color: #333;
}

.class-selector {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  width: 100%;
}

.class-selector text {
  font-size: 30rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  flex: 1;
}

.class-selector i {
  font-size: 32rpx;
  color: #999;
  flex-shrink: 0;
}

.homework-list {
  margin-bottom: 160rpx;
  width: 100%;
}

.homework-item {
  display: flex;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  position: relative;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  width: 100%;
}

.homework-info {
  flex: 1;
  overflow: hidden;
}

.homework-title {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding-right: 160rpx;
}

.homework-meta {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.homework-class {
  margin-bottom: 8rpx;
  color: #0052d9;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.homework-date, .homework-deadline {
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.homework-stats {
  display: flex;
  margin-top: 16rpx;
  flex-wrap: wrap;
}

.stat-item {
  margin-right: 32rpx;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
  display: block;
  margin-bottom: 4rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.stat-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.homework-status {
  position: absolute;
  top: 32rpx;
  right: 72rpx;
  font-size: 26rpx;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

.homework-status.pending {
  color: #ed7b2f;
  background-color: rgba(237, 123, 47, 0.1);
}

.homework-status.correcting {
  color: #0052d9;
  background-color: rgba(0, 82, 217, 0.1);
}

.homework-status.completed {
  color: #00a870;
  background-color: rgba(0, 168, 112, 0.1);
}

.t-icon-chevron-right {
  position: absolute;
  right: 32rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #ccc;
  font-size: 32rpx;
}

.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
  width: 100%;
}

.empty-tip image {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 32rpx;
}

.empty-tip text {
  font-size: 28rpx;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.float-button {
  position: fixed;
  right: 48rpx;
  bottom: 64rpx;
  width: 112rpx;
  height: 112rpx;
  border-radius: 56rpx;
  background-color: #0052d9;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 82, 217, 0.4);
}

.float-button i {
  font-size: 48rpx;
  color: #fff;
} 