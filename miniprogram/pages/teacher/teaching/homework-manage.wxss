.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f5f5f5;
}

.header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 44px;
  padding: 8px 16px;
  background-color: #fff;
  border-bottom: 1px solid #eee;
  z-index: 100;
  display: flex;
  align-items: center;
}

.title {
  font-size: 18px;
  font-weight: 500;
  color: #333;
}

.content {
  flex: 1;
  padding: 16px;
  margin-top: 44px;
}

.flex {
  display: flex;
}

.items-center {
  align-items: center;
}

.mr-2 {
  margin-right: 8px;
}

.flex-shrink-0 {
  flex-shrink: 0;
}

.filter-bar {
  background-color: #fff;
  border-radius: 8px;
  padding: 12px 16px;
  margin-bottom: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.filter-options {
  display: flex;
  margin-bottom: 12px;
}

.filter-item {
  padding: 6px 12px;
  margin-right: 8px;
  font-size: 14px;
  color: #666;
  border-radius: 16px;
  background-color: #f0f0f0;
}

.filter-item.active {
  color: #fff;
  background-color: #0052d9;
}

.search-box {
  display: flex;
  align-items: center;
  padding: 8px 12px;
  background-color: #f5f5f5;
  border-radius: 20px;
}

.search-box i {
  font-size: 18px;
  color: #999;
  margin-right: 8px;
}

.search-box input {
  flex: 1;
  height: 24px;
  font-size: 14px;
  color: #333;
}

.class-selector {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px 16px;
  background-color: #fff;
  border-radius: 8px;
  margin-bottom: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.class-selector text {
  font-size: 15px;
  color: #333;
}

.class-selector i {
  font-size: 16px;
  color: #999;
}

.homework-list {
  margin-bottom: 80px;
}

.homework-item {
  display: flex;
  background-color: #fff;
  border-radius: 8px;
  padding: 16px;
  margin-bottom: 12px;
  position: relative;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.homework-info {
  flex: 1;
}

.homework-title {
  font-size: 16px;
  color: #333;
  margin-bottom: 8px;
  font-weight: 500;
}

.homework-meta {
  font-size: 13px;
  color: #666;
  margin-bottom: 8px;
}

.homework-class {
  margin-bottom: 4px;
  color: #0052d9;
}

.homework-date, .homework-deadline {
  margin-bottom: 4px;
}

.homework-stats {
  display: flex;
  margin-top: 8px;
}

.stat-item {
  margin-right: 16px;
}

.stat-label {
  font-size: 12px;
  color: #999;
  display: block;
  margin-bottom: 2px;
}

.stat-value {
  font-size: 14px;
  color: #333;
  font-weight: 500;
}

.homework-status {
  position: absolute;
  top: 16px;
  right: 36px;
  font-size: 13px;
  padding: 2px 8px;
  border-radius: 10px;
}

.homework-status.pending {
  color: #ed7b2f;
  background-color: rgba(237, 123, 47, 0.1);
}

.homework-status.correcting {
  color: #0052d9;
  background-color: rgba(0, 82, 217, 0.1);
}

.homework-status.completed {
  color: #00a870;
  background-color: rgba(0, 168, 112, 0.1);
}

.t-icon-chevron-right {
  position: absolute;
  right: 16px;
  top: 50%;
  transform: translateY(-50%);
  color: #ccc;
  font-size: 16px;
}

.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40px 0;
}

.empty-tip image {
  width: 120px;
  height: 120px;
  margin-bottom: 16px;
}

.empty-tip text {
  font-size: 14px;
  color: #999;
}

.float-button {
  position: fixed;
  right: 24px;
  bottom: 32px;
  width: 56px;
  height: 56px;
  border-radius: 28px;
  background-color: #0052d9;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4px 12px rgba(0, 82, 217, 0.4);
}

.float-button i {
  font-size: 24px;
  color: #fff;
} 