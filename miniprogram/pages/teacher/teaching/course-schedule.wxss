.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f5f5f5;
}

.header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 44px;
  padding: 8px 16px;
  background-color: #fff;
  border-bottom: 1px solid #eee;
  z-index: 100;
  display: flex;
  align-items: center;
}

.title {
  font-size: 18px;
  font-weight: 500;
  color: #333;
}

.content {
  flex: 1;
  padding: 16px;
  margin-top: 44px;
}

.flex {
  display: flex;
}

.items-center {
  align-items: center;
}

.justify-between {
  justify-content: space-between;
}

.mr-2 {
  margin-right: 8px;
}

.flex-shrink-0 {
  flex-shrink: 0;
}

/* 日期选择器 */
.date-selector {
  background-color: #fff;
  border-radius: 8px;
  padding: 16px;
  margin-bottom: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.selector-arrow {
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #666;
}

.date-info {
  text-align: center;
}

.month {
  font-size: 16px;
  font-weight: 500;
  color: #333;
  margin-bottom: 4px;
}

.week {
  font-size: 12px;
  color: #666;
}

/* 星期选择器 */
.weekday-selector {
  background-color: #fff;
  border-radius: 8px;
  padding: 12px 8px;
  margin-bottom: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.weekday-list {
  display: flex;
  justify-content: space-between;
}

.weekday-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 8px 0;
  flex: 1;
}

.weekday-name {
  font-size: 12px;
  color: #999;
  margin-bottom: 8px;
}

.weekday-date {
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  color: #333;
  border-radius: 16px;
}

.weekday-date.weekend {
  color: #999;
}

.weekday-item.active .weekday-name {
  color: #0052d9;
}

.weekday-date.active-date {
  background-color: #0052d9;
  color: #fff;
}

/* 课程列表 */
.schedule-list {
  margin-bottom: 20px;
}

.schedule-item {
  margin-bottom: 16px;
  border-radius: 8px;
  overflow: hidden;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.schedule-item.has-class {
  border-left: 4px solid #0052d9;
}

.schedule-item.empty {
  border-left: 4px solid #ddd;
}

.schedule-item.note {
  border-left: 4px solid #0052d9;
}

.schedule-content {
  background-color: #fff;
  padding: 16px;
  display: flex;
}

.schedule-left {
  margin-right: 12px;
  min-width: 40px;
}

.schedule-number {
  font-size: 20px;
  font-weight: 500;
  color: #0052d9;
  margin-bottom: 4px;
}

.schedule-item.empty .schedule-number {
  color: #999;
}

.schedule-time {
  font-size: 12px;
  color: #999;
}

.schedule-details {
  flex: 1;
}

.schedule-title {
  font-size: 15px;
  font-weight: 500;
  color: #333;
  margin-bottom: 4px;
}

.schedule-subtitle {
  font-size: 14px;
  color: #666;
  margin-bottom: 4px;
}

.schedule-location {
  font-size: 12px;
  color: #999;
}

.schedule-empty {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 64px;
  color: #999;
}

/* 备注区域 */
.note-content {
  padding: 12px;
  background-color: #f0f6ff;
  border-radius: 8px;
  width: 100%;
}

.note-title {
  display: flex;
  align-items: center;
  font-size: 15px;
  font-weight: 500;
  color: #0052d9;
  margin-bottom: 8px;
}

.note-title i {
  margin-right: 6px;
}

.note-time, .note-location {
  font-size: 13px;
  color: #666;
  margin-top: 4px;
}

/* 无数据提示 */
.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40px 0;
}

.empty-tip image {
  width: 120px;
  height: 120px;
  margin-bottom: 16px;
}

.empty-tip text {
  font-size: 14px;
  color: #999;
} 