page {
  box-sizing: border-box;
}

.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f5f5f5;
  width: 100%;
  box-sizing: border-box;
}

.content {
  flex: 1;
  padding: 0 32rpx 32rpx 32rpx;
  width: 100%;
}

.flex {
  display: flex;
}

.items-center {
  align-items: center;
}

.justify-between {
  justify-content: space-between;
}

.mr-2 {
  margin-right: 16rpx;
}

.flex-shrink-0 {
  flex-shrink: 0;
}

/* 日期选择器 */
.date-selector {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  width: 100%;
}

.selector-arrow {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #666;
  flex-shrink: 0;
}

.date-info {
  text-align: center;
  flex: 1;
  overflow: hidden;
}

.month {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.week {
  font-size: 24rpx;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 星期选择器 */
.weekday-selector {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx 16rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
  width: 100%;
}

.weekday-list {
  display: flex;
  justify-content: space-between;
  width: 100%;
}

.weekday-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 0;
  flex: 1;
}

.weekday-name {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.weekday-date {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #333;
  border-radius: 32rpx;
}

.weekday-date.weekend {
  color: #999;
}

.weekday-item.active .weekday-name {
  color: #0052d9;
}

.weekday-date.active-date {
  background-color: #0052d9;
  color: #fff;
}

/* 课程列表 */
.schedule-list {
  margin-bottom: 40rpx;
  width: 100%;
}

.schedule-item {
  margin-bottom: 32rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  width: 100%;
}

.schedule-item.has-class {
  border-left: 8rpx solid #0052d9;
}

.schedule-item.empty {
  border-left: 8rpx solid #ddd;
}

.schedule-item.note {
  border-left: 8rpx solid #0052d9;
}

.schedule-content {
  background-color: #fff;
  padding: 32rpx;
  display: flex;
  width: 100%;
}

.schedule-left {
  margin-right: 24rpx;
  min-width: 80rpx;
  flex-shrink: 0;
}

.schedule-number {
  font-size: 40rpx;
  font-weight: 500;
  color: #0052d9;
  margin-bottom: 8rpx;
  text-align: center;
}

.schedule-item.empty .schedule-number {
  color: #999;
}

.schedule-time {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.schedule-details {
  flex: 1;
  overflow: hidden;
}

.schedule-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.schedule-subtitle {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.schedule-location {
  font-size: 24rpx;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.schedule-empty {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 128rpx;
  color: #999;
}

/* 备注区域 */
.note-content {
  padding: 24rpx;
  background-color: #f0f6ff;
  border-radius: 16rpx;
  width: 100%;
}

.note-title {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  font-weight: 500;
  color: #0052d9;
  margin-bottom: 16rpx;
}

.note-title i {
  margin-right: 12rpx;
  flex-shrink: 0;
}

.note-time, .note-location {
  font-size: 26rpx;
  color: #666;
  margin-top: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 无数据提示 */
.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
  width: 100%;
}

.empty-tip image {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 32rpx;
}

.empty-tip text {
  font-size: 28rpx;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
} 