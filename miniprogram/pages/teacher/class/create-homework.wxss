/* pages/teacher/class/create-homework.wxss */
page {
  background-color: #f5f5f5;
  height: 100%;
  font-size: 28rpx;
  box-sizing: border-box;
  overflow-y: auto;
  margin: 0;
  padding: 0;
}

.container {
  display: flex;
  flex-direction: column;
  height: 100%;
  background-color: #f5f5f5;
  width: 100%;
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

/* 顶部标题栏 */
.header {
  height: 88rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  border-bottom: 1rpx solid #e6e6e6;
  position: sticky;
  top: 0;
  width: 100%;
  box-sizing: border-box;
  z-index: 10;
}

.back-btn {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background-color: #f2f5ff;
  margin-right: 24rpx;
  z-index: 10;
  flex-shrink: 0;
}

.header-title {
  font-size: 34rpx;
  font-weight: 500;
  flex: 1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 表单容器 */
.form-container {
  flex: 1;
  padding: 24rpx;
  overflow: auto;
  width: 100%;
  box-sizing: border-box;
  -webkit-overflow-scrolling: touch;
  margin: 0;
}

.form-content {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx 0;
  width: 100%;
  box-sizing: border-box;
}

/* 科目选择器 */
.subject-select {
  display: flex;
  align-items: center;
  height: 96rpx;
  background-color: #fff;
  padding: 0 32rpx;
  margin-bottom: 12rpx;
  border-radius: 12rpx;
  width: 100%;
  box-sizing: border-box;
}

.subject-label {
  width: 172rpx;
  font-size: 28rpx;
  color: #333;
  flex-shrink: 0;
}

.subject-value {
  flex: 1;
  font-size: 28rpx;
  color: #000;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  min-width: 0; /* 确保文本溢出处理正常工作 */
}

/* 按钮容器 */
.button-container {
  margin-top: 48rpx;
  padding: 0 24rpx;
  width: 100%;
  box-sizing: border-box;
} 