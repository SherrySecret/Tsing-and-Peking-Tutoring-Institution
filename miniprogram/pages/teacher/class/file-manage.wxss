/* pages/teacher/class/file-manage.wxss */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

/* 顶部标题栏 */
.header {
  height: 88rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  border-bottom: 1rpx solid #e6e6e6;
  position: relative;
}

.back-btn {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background-color: #f2f5ff;
  margin-right: 24rpx;
  z-index: 10;
}

.header-title {
  font-size: 34rpx;
  font-weight: 500;
  flex: 1;
}

/* 标签栏 */
.tab-container {
  background-color: #fff;
  padding: 0 24rpx;
  margin-bottom: 24rpx;
}

.custom-tabs .t-tabs-content {
  background-color: #fff;
  border-radius: 8rpx;
}

/* 文件列表 */
.file-list-container {
  flex: 1;
  overflow: auto;
  padding: 0 24rpx 24rpx;
  background-color: #fff;
  margin: 0 24rpx;
  border-radius: 12rpx;
}

.list-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.section-title {
  font-size: 28rpx;
  font-weight: 500;
}

.header-actions {
  display: flex;
  align-items: center;
}

.action-btn {
  display: flex;
  align-items: center;
  margin-left: 24rpx;
  color: #0052d9;
  font-size: 24rpx;
}

.action-btn text {
  margin-left: 4rpx;
}

.file-list {
  padding: 8rpx 0;
}

.file-item {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.file-icon {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 12rpx;
  margin-right: 24rpx;
}

.file-icon.pdf {
  background-color: #ffebee;
}

.file-icon.word {
  background-color: #e3f2fd;
}

.file-icon.excel {
  background-color: #e8f5e9;
}

.file-icon.ppt {
  background-color: #fff3e0;
}

.file-info {
  flex: 1;
}

.file-name {
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.file-meta {
  font-size: 22rpx;
  color: #888;
}

.file-action {
  color: #888;
  padding: 8rpx;
}

/* 悬浮按钮 */
.floating-btn {
  position: fixed;
  bottom: 160rpx;
  right: 40rpx;
  width: 112rpx;
  height: 112rpx;
  border-radius: 50%;
  background-color: #0052d9;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 12rpx rgba(0, 0, 0, 0.1);
  z-index: 40;
}

.floating-btn text {
  font-size: 80rpx;
  font-weight: 500;
  line-height: 1;
  margin-top: -8rpx;
}

/* 上传文件弹窗 */
.upload-modal {
  background-color: #fff;
  border-radius: 24rpx 24rpx 0 0;
  width: 100%;
  max-height: 90vh;
  overflow-y: auto;
}

.modal-header {
  padding: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 34rpx;
  font-weight: 500;
}

.modal-content {
  padding: 32rpx;
}

.upload-section,
.visibility-section {
  margin: 32rpx 0;
}

.section-label {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 16rpx;
  color: #333;
}

.upload-box {
  border: 2rpx dashed #d9d9d9;
  border-radius: 12rpx;
  overflow: hidden;
}

.upload-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 48rpx;
}

.upload-hint {
  font-size: 28rpx;
  color: #888;
  margin: 16rpx 0 8rpx;
}

.upload-format {
  font-size: 24rpx;
  color: #bbb;
  margin-bottom: 24rpx;
}

.file-preview {
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  padding: 24rpx;
}

.file-preview .file-name {
  flex: 1;
  margin: 0 16rpx;
}

.file-preview .file-size {
  font-size: 24rpx;
  color: #888;
}

.class-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  padding: 16rpx;
  border: 1rpx solid #e6e6e6;
  border-radius: 8rpx;
}

.modal-footer {
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
  margin-top: 48rpx;
}

/* 文件类型选择器 */
.category-select {
  display: flex;
  align-items: center;
  height: 96rpx;
  background-color: #fff;
  padding: 0 32rpx;
  margin-bottom: 24rpx;
  border-radius: 12rpx;
  border: 1rpx solid #e6e6e6;
}

.category-label {
  width: 172rpx;
  font-size: 28rpx;
  color: #333;
}

.category-value {
  flex: 1;
  font-size: 28rpx;
  color: #000;
} 