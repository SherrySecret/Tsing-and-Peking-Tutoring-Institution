/* 页面容器 */
page {
  background-color: #f7f8fa;
  height: 100%;
  display: flex;
  flex-direction: column;
}

/* 顶部标题栏 */
.header {
  height: 88rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  padding: 0 32rpx;
  border-bottom: 1rpx solid #eee;
}

.title {
  font-size: 34rpx;
  font-weight: 500;
}

.action {
  margin-left: auto;
}

.more-btn {
  padding: 8rpx;
}

/* 内容区域 */
.content {
  flex: 1;
  overflow: auto;
}

.container {
  padding: 32rpx;
}

/* 班级卡片 */
.class-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.class-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.class-icon {
  width: 96rpx;
  height: 96rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.bg-blue {
  background-color: #e6f2ff;
}

.bg-green {
  background-color: #e6ffec;
}

.bg-orange {
  background-color: #fff2e6;
}

.bg-purple {
  background-color: #f5e6ff;
}

.bg-cyan {
  background-color: #e6fbff;
}

.bg-gray {
  background-color: #f5f5f5;
}

.bg-yellow {
  background-color: #fef3c7;
}

.class-info {
  flex: 1;
}

.class-name {
  font-size: 36rpx;
  font-weight: 500;
  display: block;
  margin-bottom: 8rpx;
}

.class-code {
  font-size: 26rpx;
  color: #999;
}

.teacher-role {
  padding: 16rpx 0;
  margin-bottom: 24rpx;
  border-bottom: 1rpx solid #eee;
}

.role-label {
  font-size: 28rpx;
  color: #666;
}

.role-value {
  font-size: 28rpx;
  font-weight: 500;
  color: #0052d9;
}

.class-stats {
  display: flex;
  justify-content: space-between;
  text-align: center;
}

.stat-item {
  flex: 1;
}

.stat-value {
  font-size: 32rpx;
  font-weight: 500;
  display: block;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

/* 快捷功能 */
.quick-functions {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  display: block;
  margin-bottom: 24rpx;
}

.function-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 24rpx 16rpx;
}

.function-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.function-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12rpx;
}

.function-name {
  font-size: 24rpx;
  color: #666;
}

/* 作业区域 */
.homework-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.view-all {
  font-size: 26rpx;
  color: #0052d9;
}

.homework-list {
  
}

.homework-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #eee;
}

.homework-item:last-child {
  border-bottom: none;
}

.homework-content {
  flex: 1;
}

.homework-title {
  font-size: 28rpx;
  font-weight: 500;
  display: block;
  margin-bottom: 8rpx;
}

.homework-desc {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-bottom: 8rpx;
}

.homework-time {
  font-size: 24rpx;
  color: #999;
}

.homework-action {
  margin-left: 16rpx;
}

/* 通知区域 */
.notice-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.notice-list {
  
}

.notice-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #eee;
}

.notice-item:last-child {
  border-bottom: none;
}

.notice-content {
  flex: 1;
}

.notice-title {
  font-size: 28rpx;
  display: block;
  margin-bottom: 8rpx;
}

.notice-time {
  font-size: 24rpx;
  color: #999;
}

/* 考勤区域 */
.attendance-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.attendance-stats {
  display: flex;
  justify-content: space-between;
  text-align: center;
  margin-bottom: 32rpx;
}

.attendance-stat {
  flex: 1;
}

.attendance-value {
  font-size: 36rpx;
  font-weight: 500;
  display: block;
  margin-bottom: 8rpx;
}

.attendance-label {
  font-size: 24rpx;
  color: #999;
}

.attendance-action {
  
}

/* 空内容提示 */
.empty-tip {
  text-align: center;
  padding: 32rpx;
  color: #999;
  font-size: 28rpx;
} 