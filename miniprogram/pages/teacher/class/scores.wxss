/* pages/teacher/class/scores.wxss */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

/* 顶部标题栏 */
.header {
  height: 88rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  border-bottom: 1rpx solid #e6e6e6;
  position: relative;
}

.back-btn {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background-color: #f2f5ff;
  margin-right: 24rpx;
  z-index: 10;
}

.header-title {
  font-size: 34rpx;
  font-weight: 500;
  flex: 1;
}

/* 筛选栏 */
.filter-bar {
  background-color: #fff;
  padding: 24rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #e6e6e6;
}

.filter-item {
  flex: 1;
  margin: 0 8rpx;
}

/* 成绩概览卡片 */
.overview-card {
  background-color: #fff;
  padding: 24rpx;
  margin-bottom: 24rpx;
  border-bottom: 1rpx solid #e6e6e6;
}

.section-title {
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 24rpx;
}

.stat-row {
  display: flex;
  justify-content: space-between;
  text-align: center;
  margin-bottom: 24rpx;
}

.stat-item {
  flex: 1;
}

.stat-value {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.stat-value.primary {
  color: #0052d9;
}

.stat-value.success {
  color: #2ba471;
}

.stat-value.danger {
  color: #e34d59;
}

.stat-label {
  font-size: 24rpx;
  color: #888;
}

/* 成绩分布图 */
.distribution-bar {
  height: 24rpx;
  display: flex;
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 16rpx;
}

.distribution-segment {
  height: 100%;
}

.distribution-legend {
  display: flex;
  justify-content: space-between;
  font-size: 22rpx;
  color: #888;
}

/* 成绩列表 */
.score-list-section {
  flex: 1;
  overflow: auto;
  padding: 24rpx;
}

.score-list {
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 24rpx;
}

.student-score-item {
  padding: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f0f0f0;
}

.student-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  background-color: #f2f5ff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  color: #0052d9;
}

.student-details {
  display: flex;
  flex-direction: column;
}

.student-name {
  font-weight: 500;
  margin-bottom: 8rpx;
}

.student-id {
  font-size: 22rpx;
  color: #888;
}

.score {
  font-size: 36rpx;
  font-weight: 600;
}

.score.good {
  color: #2ba471;
}

.score.normal {
  color: #0052d9;
}

.score.medium {
  color: #f37b1d;
}

.score.poor {
  color: #e34d59;
}

.more-btn {
  text-align: center;
  color: #0052d9;
  padding: 24rpx 0;
  font-size: 28rpx;
}

/* 悬浮按钮 */
.floating-btn {
  position: fixed;
  bottom: 160rpx;
  right: 40rpx;
  width: 112rpx;
  height: 112rpx;
  border-radius: 50%;
  background-color: #0052d9;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 12rpx rgba(0, 0, 0, 0.1);
  z-index: 40;
}

.floating-btn text {
  font-size: 80rpx;
  font-weight: 500;
  line-height: 1;
  margin-top: -8rpx;
}

/* 导入成绩弹窗 */
.import-modal {
  background-color: #fff;
  border-radius: 24rpx 24rpx 0 0;
  width: 100%;
  max-height: 90vh;
  overflow-y: auto;
}

.modal-header {
  padding: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 34rpx;
  font-weight: 500;
}

.modal-content {
  padding: 32rpx;
}

.upload-section {
  margin: 32rpx 0;
}

.section-label {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 16rpx;
  color: #333;
}

.upload-box {
  border: 2rpx dashed #d9d9d9;
  border-radius: 12rpx;
  padding: 48rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
}

.upload-hint {
  font-size: 28rpx;
  color: #888;
  margin: 16rpx 0 8rpx;
}

.upload-format {
  font-size: 24rpx;
  color: #bbb;
  margin-bottom: 24rpx;
}

.file-preview {
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  padding: 16rpx;
  border-radius: 8rpx;
  margin-top: 16rpx;
}

.file-preview text {
  margin-left: 12rpx;
  font-size: 26rpx;
}

.template-hint {
  font-size: 26rpx;
  color: #888;
  margin-bottom: 32rpx;
}

.link {
  color: #0052d9;
  margin-left: 16rpx;
}

.modal-footer {
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
  margin-top: 48rpx;
} 