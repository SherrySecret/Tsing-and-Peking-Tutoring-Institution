 /* 页面整体样式 */
.header {
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #ffffff;
  border-bottom: 1rpx solid #f0f0f0;
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 10;
}

.title {
  font-size: 34rpx;
  font-weight: 500;
  color: #333333;
}

/* 日期选择器 */
.date-select {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 0;
  background-color: #ffffff;
  margin-top: 88rpx;
}

.date-arrow {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.date-current {
  font-size: 30rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}

/* 考勤统计卡片 */
.stats-container {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background-color: #ffffff;
  margin-bottom: 20rpx;
}

.stat-card {
  flex: 1;
  text-align: center;
  padding: 15rpx 0;
}

.stat-value {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
}

.stat-label {
  font-size: 24rpx;
  color: #999999;
  margin-top: 4rpx;
}

/* 班级选择标签页 */
.class-select {
  background-color: #ffffff;
  padding: 0 20rpx;
}

/* 学生列表 */
.student-list {
  height: calc(100vh - 510rpx);
  background-color: #ffffff;
  margin-bottom: 100rpx;
}

.list-header {
  display: flex;
  padding: 20rpx 30rpx;
  background-color: #f5f5f5;
  font-size: 26rpx;
  color: #666666;
  font-weight: 500;
}

.header-item {
  flex: 1;
  text-align: center;
}

.student-item {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.student-info {
  flex: 1;
  display: flex;
  align-items: center;
}

.student-avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.student-name {
  font-size: 28rpx;
  color: #333333;
}

.status-container {
  flex: 1;
  display: flex;
  justify-content: center;
}

.status-tag {
  padding: 6rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  color: #ffffff;
}

.status-present {
  background-color: #0052d9;
}

.status-absent {
  background-color: #e34d59;
}

.status-late {
  background-color: #ed7b2f;
}

.action-btns {
  flex: 1;
  display: flex;
  justify-content: flex-end;
  gap: 10rpx;
}

/* 提交按钮 */
.submit-btn {
  position: fixed;
  bottom: 112rpx;
  left: 0;
  right: 0;
  padding: 20rpx 30rpx;
  background-color: #ffffff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}