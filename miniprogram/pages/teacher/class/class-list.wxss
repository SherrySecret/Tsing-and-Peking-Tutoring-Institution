/* 页面容器 */
page {
  background-color: #f7f8fa;
  height: 100%;
  display: flex;
  flex-direction: column;
}

/* 顶部标题栏 */
.header {
  height: 88rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  padding: 0 32rpx;
  border-bottom: 1rpx solid #eee;
}

.title {
  font-size: 34rpx;
  font-weight: 500;
}

/* 搜索栏 */
.search-bar {
  padding: 24rpx 32rpx;
  background-color: #fff;
}

.search-inner {
  position: relative;
  display: flex;
  align-items: center;
}

.search-icon {
  position: absolute;
  left: 24rpx;
  color: #999;
}

.search-inner input {
  flex: 1;
  height: 72rpx;
  background-color: #f5f5f5;
  border-radius: 36rpx;
  padding: 0 24rpx 0 72rpx;
  font-size: 28rpx;
}

/* 班级列表容器 */
.class-list-container {
  flex: 1;
  padding: 32rpx;
}

.hidden {
  display: none;
}

/* 班级列表 */
.class-list {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.class-card {
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.class-info {
  padding: 32rpx;
  border-bottom: 1rpx solid #eee;
}

.class-header {
  display: flex;
  align-items: center;
}

.class-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.bg-yellow {
  background-color: #fef3c7;
}

.bg-blue {
  background-color: #e6f2ff;
}

.bg-green {
  background-color: #e6ffec;
}

.bg-purple {
  background-color: #f5e6ff;
}

.class-detail {
  flex: 1;
}

.class-name {
  font-size: 32rpx;
  font-weight: 500;
  display: block;
  margin-bottom: 8rpx;
}

.class-desc {
  font-size: 24rpx;
  color: #999;
}

/* 班级功能列表 */
.action-scroll {
  padding: 24rpx;
  background-color: #f7f8fa;
  white-space: nowrap;
  display: flex;
}

.action-list {
  display: flex;
}

.action-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-right: 40rpx;
}

.action-item:last-child {
  margin-right: 0;
}

.action-item text {
  font-size: 26rpx;
  color: #666;
  margin-left: 8rpx;
}

/* 空白提示 */
.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 64rpx 32rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-top: 32rpx;
}

/* 创建班级悬浮按钮 */
.floating-button {
  position: fixed;
  bottom: 160rpx;
  right: 40rpx;
  width: 112rpx;
  height: 112rpx;
  border-radius: 50%;
  background-color: #0052d9;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.1);
  z-index: 10;
} 