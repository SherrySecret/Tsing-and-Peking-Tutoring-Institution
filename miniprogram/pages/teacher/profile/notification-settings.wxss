page {
  background-color: #f7f8fa;
  height: 100%;
  font-size: 28rpx;
  box-sizing: border-box;
}

.container {
  min-height: 100vh;
  background-color: #f7f8fa;
  width: 100%;
  box-sizing: border-box;
}

.header {
  position: relative;
  height: 88rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  padding: 0 30rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  width: 100%;
  z-index: 10;
}

.title {
  font-size: 34rpx;
  font-weight: 500;
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.content {
  padding: 30rpx;
  width: 100%;
  box-sizing: border-box;
}

.section {
  margin-bottom: 30rpx;
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.03);
  width: 100%;
  box-sizing: border-box;
}

.section-header {
  font-size: 28rpx;
  color: #888;
  padding: 30rpx 30rpx 10rpx;
  width: 100%;
  box-sizing: border-box;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
  width: 100%;
  box-sizing: border-box;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item.disabled {
  opacity: 0.5;
}

.menu-item-left {
  display: flex;
  align-items: center;
  flex: 1;
  min-width: 0; /* 确保文本溢出处理正常工作 */
}

.menu-text {
  font-size: 30rpx;
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.menu-item-right {
  display: flex;
  align-items: center;
  color: #bbb;
  flex-shrink: 0;
  margin-left: 16rpx;
}

.time-text {
  font-size: 26rpx;
  color: #888;
  margin-right: 10rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.tip {
  font-size: 24rpx;
  color: #999;
  padding: 10rpx 20rpx;
  line-height: 1.5;
  width: 100%;
  box-sizing: border-box;
}

.flex {
  display: flex;
}

.items-center {
  align-items: center;
}

.flex-shrink-0 {
  flex-shrink: 0;
}

.mr-2 {
  margin-right: 16rpx;
} 