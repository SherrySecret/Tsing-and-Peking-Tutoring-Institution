/* 页面容器 */
page {
  background-color: #f7f8fa;
  height: 100%;
  display: flex;
  flex-direction: column;
}

/* 顶部标题栏 */
.header {
  height: 88rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  padding: 0 32rpx;
  border-bottom: 1rpx solid #eee;
}

.title {
  font-size: 34rpx;
  font-weight: 500;
}

/* 内容区域 */
.content {
  flex: 1;
  overflow: auto;
}

.container {
  padding: 32rpx;
}

/* 用户信息卡片 */
.user-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.user-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.avatar-container {
  display: flex;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #e6f2ff;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.nickname {
  font-size: 32rpx;
  font-weight: 500;
}

.edit-btn {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background-color: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
}

.user-info {
  display: flex;
  justify-content: space-between;
}

.info-item {
  flex: 1;
  text-align: center;
}

.label {
  font-size: 24rpx;
  color: #999;
  display: block;
  margin-bottom: 8rpx;
}

.value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 功能区块 */
.section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
}

.section-content {
  
}

/* 菜单项 */
.menu-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #eee;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.bg-blue {
  background-color: #e6f2ff;
}

.bg-green {
  background-color: #e6ffec;
}

.bg-orange {
  background-color: #fff2e6;
}

.bg-purple {
  background-color: #f5e6ff;
}

.bg-cyan {
  background-color: #e6fbff;
}

.menu-name {
  font-size: 28rpx;
  flex: 1;
}

.version-text {
  font-size: 24rpx;
  color: #999;
  margin-right: 16rpx;
}

/* 退出登录按钮 */
.logout-button {
  margin-top: 64rpx;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  text-align: center;
  color: #ff4d4f;
  font-size: 32rpx;
  font-weight: 500;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
} 