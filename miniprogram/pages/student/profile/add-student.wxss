/* 页面容器 */
page {
  background-color: #f7f8fa;
  height: 100%;
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
  box-sizing: border-box;
}

/* 顶部标题栏 */
.header {
  height: 88rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  padding: 0 32rpx;
  border-bottom: 1rpx solid #eee;
  width: 100%;
  box-sizing: border-box;
  position: relative;
  z-index: 10;
}

.title {
  font-size: 34rpx;
  font-weight: 500;
}

/* 内容区域 */
.content {
  flex: 1;
  overflow: auto;
  -webkit-overflow-scrolling: touch;
  width: 100%;
  box-sizing: border-box;
}

.container {
  padding: 32rpx;
  width: 100%;
  box-sizing: border-box;
}

/* 表单卡片 */
.form-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  width: 100%;
  box-sizing: border-box;
}

.form-header {
  margin-bottom: 32rpx;
  width: 100%;
  box-sizing: border-box;
}

.form-title {
  font-size: 32rpx;
  font-weight: 500;
  display: block;
  margin-bottom: 8rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.form-desc {
  font-size: 26rpx;
  color: #999;
  white-space: normal;
  word-break: break-word;
}

/* 表单字段 */
.form-fields {
  width: 100%;
  box-sizing: border-box;
}

.form-item {
  margin-bottom: 24rpx;
  width: 100%;
  box-sizing: border-box;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  display: block;
  margin-bottom: 12rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.required {
  color: #ff4d4f;
}

.form-input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.form-textarea {
  width: 100%;
  height: 180rpx;
  padding: 16rpx 24rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

/* 单选按钮组 */
.radio-group {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  box-sizing: border-box;
}

.radio-item {
  display: flex;
  align-items: center;
  margin-right: 48rpx;
  margin-bottom: 16rpx;
}

.radio-dot {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  border: 1rpx solid #ddd;
  margin-right: 8rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.radio-item.checked .radio-dot {
  border-color: #0052d9;
  background-color: #0052d9;
  position: relative;
}

.radio-item.checked .radio-dot::after {
  content: '';
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: #fff;
  position: absolute;
}

.radio-text {
  font-size: 28rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 选择器样式 */
.picker-view {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
}

/* 提示文本 */
.form-tips {
  margin-bottom: 32rpx;
  width: 100%;
  box-sizing: border-box;
}

.tips-text {
  font-size: 26rpx;
  color: #999;
  line-height: 1.6;
  white-space: normal;
  word-break: break-word;
}

/* 表单操作按钮 */
.form-actions {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 32rpx;
  width: 100%;
  box-sizing: border-box;
} 