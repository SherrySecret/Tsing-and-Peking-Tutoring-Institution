/* pages/student/profile/student-archives.wxss */
page {
  background-color: #f5f7fa;
  height: 100%;
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
  box-sizing: border-box;
}

/* 顶部标题栏 */
.header {
  height: 88rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  padding: 0 32rpx;
  border-bottom: 1rpx solid #eee;
  width: 100%;
  box-sizing: border-box;
  position: relative;
  z-index: 10;
}

.title {
  font-size: 34rpx;
  font-weight: 500;
}

/* 内容区域 */
.content {
  flex: 1;
  overflow: auto;
  -webkit-overflow-scrolling: touch;
  width: 100%;
  box-sizing: border-box;
}

.container {
  padding: 32rpx;
  padding-bottom: 120rpx;
  width: 100%;
  box-sizing: border-box;
}

/* 搜索栏 */
.search-bar {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 16rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  width: 100%;
  box-sizing: border-box;
}

.search-inner {
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 24rpx;
  padding: 12rpx 16rpx;
  width: 100%;
  box-sizing: border-box;
}

.search-inner input {
  flex: 1;
  height: 40rpx;
  margin-left: 8rpx;
  font-size: 28rpx;
  min-width: 0; /* 确保文本溢出处理正常工作 */
}

/* 学生列表 */
.student-list {
  margin-bottom: 40rpx;
  width: 100%;
  box-sizing: border-box;
}

.student-item {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  width: 100%;
  box-sizing: border-box;
}

.student-avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 48rpx;
  margin-right: 24rpx;
  background-color: #f0f0f0;
  flex-shrink: 0;
}

.student-info {
  flex: 1;
  min-width: 0; /* 确保文本溢出处理正常工作 */
}

.student-name-row {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
  width: 100%;
  box-sizing: border-box;
}

.student-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-right: 12rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.student-gender {
  font-size: 24rpx;
  color: #666;
  flex-shrink: 0;
}

.student-meta {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.student-id {
  font-size: 24rpx;
  color: #999;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.student-actions {
  display: flex;
  flex-shrink: 0;
  margin-left: 8rpx;
}

.action-btn {
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 8rpx;
  flex-shrink: 0;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
  width: 100%;
  box-sizing: border-box;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 添加按钮 */
.add-button {
  position: fixed;
  right: 48rpx;
  bottom: 160rpx;
  width: 96rpx;
  height: 96rpx;
  background-color: #0052d9;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 82, 217, 0.3);
  z-index: 100;
} 