/* 页面容器 */
page {
  background-color: #f7f8fa;
  height: 100%;
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
  box-sizing: border-box;
}

/* 顶部标题栏 */
.header {
  height: 88rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  padding: 0 32rpx;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 16rpx;
}

.title {
  font-size: 32rpx;
  font-weight: 500;
}

.action {
  margin-left: auto;
}

.add-btn {
  padding: 12rpx 24rpx;
  background-color: #0052d9;
  color: #fff;
  border-radius: 32rpx;
  font-size: 26rpx;
}

/* 主要内容区域 */
.content {
  flex: 1;
  overflow: auto;
  -webkit-overflow-scrolling: touch;
  /* 默认隐藏滚动条 */
  scrollbar-width: none; /* Firefox */
  -ms-overflow-style: none; /* IE and Edge */
}

/* 隐藏滚动条但保留功能 */
.content::-webkit-scrollbar {
  display: none; /* Chrome, Safari, Opera */
}

.container {
  padding: 20rpx;
  box-sizing: border-box;
  width: 100%;
  display: flex;
  flex-direction: column;
}

/* 欢迎信息 */
.welcome-box {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  width: 100%;
  box-sizing: border-box;
}

.welcome-title {
  font-size: 34rpx;
  font-weight: 500;
  margin-bottom: 12rpx;
  display: block;
}

.welcome-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 快速入口 */
.quick-entry {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 18rpx;
  margin-bottom: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.entry-item {
  border-radius: 16rpx;
  padding: 16rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  aspect-ratio: 1 / 1; /* 保持1:1的宽高比 */
}

.entry-item t-icon {
  font-size: 48rpx !important;
  margin-bottom: 8rpx;
}

.entry-item text {
  font-size: 26rpx;
}

.bg-blue {
  background-color: #0052d9;
}

.bg-green {
  background-color: #00a870;
}

.bg-purple {
  background-color: #9e67e7;
}

.bg-orange {
  background-color: #f59e0b;
}

/* 学生档案入口 */
.student-archive {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  width: 100%;
  box-sizing: border-box;
}

.archive-icon {
  width: 80rpx;
  height: 80rpx;
  flex-shrink: 0;
  background-color: #fef3c7;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.archive-info {
  flex: 1;
  margin: 0 16rpx;
  min-width: 0; /* 确保文本溢出处理正常工作 */
}

.archive-title {
  font-size: 30rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.archive-desc {
  font-size: 24rpx;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.archive-btn {
  padding: 12rpx 24rpx;
  background-color: #f59e0b;
  color: #fff;
  border-radius: 32rpx;
  font-size: 26rpx;
  flex-shrink: 0;
}

/* 公告信息 */
.notice {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  width: 100%;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}

.notice-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  padding-bottom: 12rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.notice-title {
  font-size: 30rpx;
  font-weight: 500;
  margin-left: 16rpx;
}

.notice-list {
  width: 100%;
  max-height: unset; /* 移除最大高度限制 */
}

.notice-item {
  padding-bottom: 12rpx;
  margin-bottom: 12rpx;
  border-bottom: 1rpx solid #eee;
}

.notice-item:last-child {
  margin-bottom: 0;
  padding-bottom: 0;
  border-bottom: none;
}

.notice-item-title {
  font-size: 28rpx;
  font-weight: 500;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.notice-item-date {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
  display: block;
}

/* 查看更多按钮 */
.view-more {
  display: flex;
  justify-content: center;
  margin-top: 24rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #eee;
}

.view-more-btn {
  display: flex;
  align-items: center;
  color: #0052d9;
  font-size: 28rpx;
}

/* 底部空间 */
.bottom-spacing {
  height: 100rpx;
}