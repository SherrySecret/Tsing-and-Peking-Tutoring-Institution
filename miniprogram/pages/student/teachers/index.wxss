/* pages/student/teachers/index.wxss */
page {  
  background-color: #f5f7fa;  
  height: 100%;  
  display: flex;  
  flex-direction: column;  
  font-size: 28rpx;  
  box-sizing: border-box;
}

/* 内容区域 */
.content {
  flex: 1;
  height: 100%;
  overflow: auto;
  -webkit-overflow-scrolling: touch;
  width: 100%;
  box-sizing: border-box;
  padding-top: 5rpx; /* 减小顶部间距 */
}

.container {
  padding: 10rpx 20rpx; /* 减小容器内边距 */
  width: 100%;
  box-sizing: border-box;
}

/* 搜索栏 */
.search-bar {  
  background-color: #fff;  
  border-radius: 12rpx;  
  padding: 8rpx; /* 减小内边距 */  
  margin-bottom: 4rpx; /* 极小的下边距 */  
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.03); /* 减轻阴影 */  
  width: 100%;  
  box-sizing: border-box;
}

.search-inner {
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 24rpx;
  padding: 8rpx 12rpx; /* 减小内边距 */
  width: 100%;
  box-sizing: border-box;
}

.search-inner input {
  flex: 1;
  height: 36rpx; /* 稍微减小高度 */
  margin-left: 8rpx;
  font-size: 28rpx;
  min-width: 0; /* 确保文本溢出处理正常工作 */
}

/* 教师列表 */
.teacher-list {  
  margin-top: 0; /* 无顶部间距 */  
  margin-bottom: 16rpx; /* 减小底部间距 */  
  width: 100%;  
  box-sizing: border-box;
}

.teacher-item {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 16rpx; /* 减小内边距 */
  margin-bottom: 12rpx; /* 减小列表项间距 */
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  width: 100%;
  box-sizing: border-box;
}

.teacher-item:first-child {
  margin-top: 0; /* 首个列表项无顶部间距 */
}

.teacher-avatar {
  width: 80rpx; /* 减小头像尺寸 */
  height: 80rpx;
  border-radius: 40rpx;
  margin-right: 16rpx; /* 减小右边距 */
  background-color: #f0f0f0;
  flex-shrink: 0;
}

.teacher-info {
  flex: 1;
  min-width: 0; /* 确保文本溢出处理正常工作 */
}

.teacher-name-row {
  display: flex;
  align-items: center;
  margin-bottom: 4rpx; /* 减小下边距 */
  width: 100%;
  box-sizing: border-box;
}

.teacher-name {
  font-size: 30rpx; /* 稍微减小字体 */
  font-weight: 500;
  color: #333;
  margin-right: 8rpx; /* 减小右边距 */
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.teacher-tag {
  font-size: 20rpx;
  padding: 2rpx 6rpx; /* 减小内边距 */
  border-radius: 4rpx;
  color: #fff;
  background-color: #0052d9;
  flex-shrink: 0;
}

.teacher-subject {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 4rpx; /* 减小下边距 */
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.teacher-class {
  font-size: 24rpx;
  color: #999;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.teacher-arrow {
  margin-left: 12rpx; /* 减小左边距 */
  flex-shrink: 0;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 30rpx 0; /* 进一步减小上下内边距 */
  width: 100%;
  box-sizing: border-box;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-top: 12rpx; /* 减小上边距 */
} 