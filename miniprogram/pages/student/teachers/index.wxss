/* pages/student/teachers/index.wxss */
page {
  background-color: #f5f7fa;
  height: 100%;
  display: flex;
  flex-direction: column;
}

/* 顶部标题栏 */
.header {
  height: 88rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  padding: 0 32rpx;
  border-bottom: 1rpx solid #eee;
}

.title {
  font-size: 34rpx;
  font-weight: 500;
}

/* 内容区域 */
.content {
  flex: 1;
  overflow: auto;
}

.container {
  padding: 32rpx;
}

/* 搜索栏 */
.search-bar {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 16rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.search-inner {
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 24rpx;
  padding: 12rpx 16rpx;
}

.search-inner input {
  flex: 1;
  height: 40rpx;
  margin-left: 8rpx;
  font-size: 28rpx;
}

/* 教师列表 */
.teacher-list {
  margin-bottom: 40rpx;
}

.teacher-item {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.teacher-avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 48rpx;
  margin-right: 24rpx;
  background-color: #f0f0f0;
}

.teacher-info {
  flex: 1;
}

.teacher-name-row {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.teacher-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-right: 12rpx;
}

.teacher-tag {
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
  color: #fff;
  background-color: #0052d9;
}

.teacher-subject {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.teacher-class {
  font-size: 24rpx;
  color: #999;
}

.teacher-arrow {
  margin-left: 16rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-top: 16rpx;
} 