 /* 整体布局 */
.header {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 88rpx;
  background-color: #ffffff;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
}

.title {
  font-size: 34rpx;
  font-weight: 500;
  color: #333333;
}

.content {
  position: fixed;
  top: 88rpx;
  left: 0;
  right: 0;
  bottom: 112rpx;
  background-color: #f5f5f5;
}

.container {
  padding: 30rpx 20rpx;
}

/* 功能网格样式 */
.t-grid {
  background-color: #ffffff;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
}

/* 板块通用样式 */
.section {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
}

.section-more {
  font-size: 26rpx;
  color: #0052d9;
}

/* 活动列表样式 */
.activity-list {
  display: flex;
  overflow-x: auto;
  padding: 10rpx 0;
}

.activity-card {
  flex-shrink: 0;
  width: 300rpx;
  border-radius: 12rpx;
  background-color: #ffffff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-right: 20rpx;
  overflow: hidden;
}

.activity-image {
  width: 100%;
  height: 160rpx;
}

.activity-info {
  padding: 16rpx;
}

.activity-title {
  font-size: 28rpx;
  color: #333333;
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.activity-time {
  font-size: 24rpx;
  color: #999999;
  margin-top: 8rpx;
  display: block;
}

/* 资源列表样式 */
.resource-list {
  margin-top: 10rpx;
}

.resource-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.resource-item:last-child {
  border-bottom: none;
}

.resource-info {
  flex: 1;
  margin-left: 20rpx;
  overflow: hidden;
}

.resource-title {
  font-size: 28rpx;
  color: #333333;
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.resource-desc {
  font-size: 24rpx;
  color: #999999;
  margin-top: 8rpx;
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}