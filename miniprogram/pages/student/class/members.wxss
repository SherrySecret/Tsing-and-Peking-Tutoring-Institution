/* pages/student/class/members.wxss */
page {
  background-color: #f5f7fa;
  height: 100%;
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
  box-sizing: border-box;
}

/* 顶部标题栏 */
.header {
  height: 88rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  padding: 0 32rpx;
  border-bottom: 1rpx solid #eee;
  position: relative;
  z-index: 10;
}

.title {
  font-size: 34rpx;
  font-weight: 500;
}

/* 内容区域 */
.content {
  flex: 1;
  overflow: auto;
  -webkit-overflow-scrolling: touch;
}

.container {
  padding: 24rpx 32rpx;
  box-sizing: border-box;
  width: 100%;
}

/* 班级信息 */
.class-info {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  width: 100%;
  box-sizing: border-box;
}

.class-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.class-meta {
  display: flex;
  font-size: 26rpx;
  color: #666;
  flex-wrap: wrap;
}

.meta-item {
  margin-right: 24rpx;
  margin-bottom: 4rpx;
}

/* 搜索栏 */
.search-bar {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 16rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  width: 100%;
  box-sizing: border-box;
}

.search-inner {
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 24rpx;
  padding: 12rpx 16rpx;
}

.search-inner input {
  flex: 1;
  height: 40rpx;
  margin-left: 8rpx;
  font-size: 28rpx;
}

/* 标签页 */
.tabs {
  display: flex;
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
  width: 100%;
  box-sizing: border-box;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s;
}

.tab.active {
  background-color: #0052d9;
  color: #fff;
  font-weight: 500;
}

/* 成员列表 */
.member-list {
  margin-bottom: 80rpx;
  width: 100%;
}

.member-group {
  margin-bottom: 24rpx;
  width: 100%;
  box-sizing: border-box;
}

.group-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
  padding-left: 16rpx;
  border-left: 6rpx solid #0052d9;
}

.member-items {
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  width: 100%;
  box-sizing: border-box;
}

.member-item {
  display: flex;
  align-items: center;
  padding: 20rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
  box-sizing: border-box;
  width: 100%;
}

.member-item:last-child {
  border-bottom: none;
}

.member-avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 36rpx;
  margin-right: 20rpx;
  background-color: #f0f0f0;
  flex-shrink: 0;
}

.member-info {
  flex: 1;
  min-width: 0; /* 确保文本溢出处理正常工作 */
}

.member-name {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
  flex-wrap: wrap;
}

.member-name text {
  font-size: 28rpx;
  color: #333;
  margin-right: 12rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 70%;
}

.member-tag {
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
  color: #fff;
  flex-shrink: 0;
}

.member-tag.teacher {
  background-color: #0052d9;
}

.member-tag.student {
  background-color: #f59e0b;
}

.member-subject, .member-meta {
  font-size: 24rpx;
  color: #999;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
  width: 100%;
  box-sizing: border-box;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-top: 16rpx;
  text-align: center;
} 