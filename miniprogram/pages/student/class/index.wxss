/* 页面容器 */
page {
  background-color: #f7f8fa;
  height: 100%;
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
  box-sizing: border-box;
}

/* 顶部标题栏 */
.header {
  height: 88rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  padding: 0 32rpx;
  border-bottom: 1rpx solid #eee;
  position: relative;
  z-index: 10;
}

.title {
  font-size: 34rpx;
  font-weight: 500;
}

.action {
  margin-left: auto;
}

.add-btn {
  padding: 12rpx 32rpx;
  background-color: #0052d9;
  color: #fff;
  border-radius: 32rpx;
  font-size: 26rpx;
}

/* 内容区域 */
.content {
  flex: 1;
  overflow: auto;
  -webkit-overflow-scrolling: touch;
}

.container {
  padding: 24rpx 32rpx;
  box-sizing: border-box;
  width: 100%;
}

/* 班级列表 */
.class-list {
  width: 100%;
}

.class-item {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  box-sizing: border-box;
  width: 100%;
}

.flex-row {
  display: flex;
  align-items: center;
  width: 100%;
}

.class-icon {
  width: 112rpx;
  height: 112rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.bg-blue {
  background-color: #e6f2ff;
}

.bg-green {
  background-color: #e6ffec;
}

.class-info {
  flex: 1;
  min-width: 0; /* 确保文本溢出处理正常工作 */
}

.class-name {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.class-teacher {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.class-student {
  font-size: 28rpx;
  color: #0052d9;
  margin-bottom: 12rpx;
  display: block;
}

.class-stats {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.stat-text {
  font-size: 24rpx;
  color: #999;
}

.divider {
  margin: 0 12rpx;
  color: #ddd;
  font-size: 24rpx;
}

/* 无班级提示 */
.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 64rpx 32rpx;
  background-color: #fff;
  border-radius: 16rpx;
  box-sizing: border-box;
  width: 100%;
}

.empty-text {
  font-size: 30rpx;
  color: #666;
  margin: 32rpx 0;
  text-align: center;
}

.join-btn {
  padding: 16rpx 48rpx;
  background-color: #0052d9;
  color: #fff;
  border-radius: 32rpx;
  font-size: 28rpx;
} 