/* pages/student/class/notice-detail.wxss */
page {
  background-color: #f5f7fa;
  height: 100%;
  display: flex;
  flex-direction: column;
}

/* 顶部标题栏 */
.header {
  height: 88rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  padding: 0 32rpx;
  border-bottom: 1rpx solid #eee;
}

.title {
  font-size: 34rpx;
  font-weight: 500;
}

/* 内容区域 */
.content {
  flex: 1;
  overflow: auto;
}

.container {
  padding: 32rpx;
  background-color: #fff;
  border-radius: 12rpx;
  margin: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

/* 通知标题 */
.notice-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
  line-height: 1.4;
}

/* 通知元信息 */
.notice-meta {
  margin-bottom: 32rpx;
  position: relative;
}

.meta-row {
  display: flex;
  margin-bottom: 16rpx;
}

.meta-item {
  flex: 1;
  font-size: 26rpx;
}

.meta-label {
  color: #999;
}

.meta-value {
  color: #333;
}

.meta-value.overdue {
  color: #f53f3f;
}

.notice-tag {
  position: absolute;
  top: 0;
  right: 0;
  font-size: 24rpx;
  color: #fff;
  padding: 6rpx 16rpx;
  border-radius: 6rpx;
}

.notice-tag.important {
  background-color: #f53f3f;
}

.notice-tag.activity {
  background-color: #0052d9;
}

.notice-tag.academic {
  background-color: #00a870;
}

/* 通知内容 */
.notice-content {
  font-size: 30rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 40rpx;
  white-space: pre-wrap;
}

/* 附件 */
.attachments {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
}

.section-title::before {
  content: '';
  display: block;
  width: 8rpx;
  height: 30rpx;
  background-color: #0052d9;
  margin-right: 16rpx;
}

.attachment-list {
  background-color: #f9f9f9;
  border-radius: 8rpx;
}

.attachment-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.attachment-item:last-child {
  border-bottom: none;
}

.attachment-icon {
  margin-right: 16rpx;
}

.attachment-name {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.attachment-action {
  color: #0052d9;
}

/* 确认通知 */
.confirm-section {
  margin-top: 40rpx;
  padding-top: 32rpx;
  border-top: 1rpx solid #eee;
}

.confirm-section t-checkbox {
  margin-bottom: 24rpx;
}

/* 已确认状态 */
.confirmed-status {
  margin-top: 40rpx;
  padding-top: 32rpx;
  border-top: 1rpx solid #eee;
  display: flex;
  align-items: center;
  justify-content: center;
}

.confirmed-icon {
  margin-right: 12rpx;
}

.confirmed-text {
  font-size: 28rpx;
  color: #00a870;
} 