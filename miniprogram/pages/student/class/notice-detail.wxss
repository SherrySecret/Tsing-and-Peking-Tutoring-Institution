/* pages/student/class/notice-detail.wxss */
page {
  background-color: #f5f7fa;
  height: 100%;
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
  box-sizing: border-box;
}

/* 顶部标题栏 */
.header {
  height: 88rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  padding: 0 32rpx;
  border-bottom: 1rpx solid #eee;
  width: 100%;
  box-sizing: border-box;
  position: relative;
  z-index: 10;
}

.title {
  font-size: 34rpx;
  font-weight: 500;
}

/* 内容区域 */
.content {
  flex: 1;
  overflow: auto;
  -webkit-overflow-scrolling: touch;
  width: 100%;
  box-sizing: border-box;
  padding-bottom: 40rpx; /* 增加底部内边距确保内容可以完全显示 */
}

.container {
  padding: 32rpx;
  background-color: #fff;
  border-radius: 12rpx;
  margin: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  width: calc(100% - 48rpx);
  box-sizing: border-box;
}

/* 通知标题 */
.notice-title-container {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  margin-bottom: 24rpx;
  width: 100%;
  box-sizing: border-box;
}

.notice-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.4;
  word-wrap: break-word;
  flex: 1;
  margin-right: 16rpx;
  min-width: 0; /* 确保文本溢出处理正常工作 */
}

/* 通知元信息 */
.notice-meta {
  margin-bottom: 32rpx;
  position: relative;
  width: 100%;
  box-sizing: border-box;
}

.meta-row {
  display: flex;
  margin-bottom: 16rpx;
  width: 100%;
  box-sizing: border-box;
}

.meta-item {
  flex: 1;
  font-size: 26rpx;
  min-width: 0; /* 确保文本溢出处理正常工作 */
}

.meta-label {
  color: #999;
}

.meta-value {
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.meta-value.overdue {
  color: #f53f3f;
}

.notice-tag {
  font-size: 24rpx;
  color: #fff;
  padding: 6rpx 16rpx;
  border-radius: 6rpx;
  flex-shrink: 0;
  margin-top: 6rpx;
}

.notice-tag.important {
  background-color: #f53f3f;
}

.notice-tag.activity {
  background-color: #0052d9;
}

.notice-tag.academic {
  background-color: #00a870;
}

/* 通知内容 */
.notice-content {
  font-size: 30rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 40rpx;
  white-space: pre-wrap;
  width: 100%;
  box-sizing: border-box;
  word-wrap: break-word;
}

/* 附件 */
.attachments {
  margin-bottom: 40rpx;
  width: 100%;
  box-sizing: border-box;
}

.section-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
  width: 100%;
  box-sizing: border-box;
}

.section-title::before {
  content: '';
  display: block;
  width: 8rpx;
  height: 30rpx;
  background-color: #0052d9;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.attachment-list {
  background-color: #f9f9f9;
  border-radius: 8rpx;
  width: 100%;
  box-sizing: border-box;
}

.attachment-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
  width: 100%;
  box-sizing: border-box;
}

.attachment-item:last-child {
  border-bottom: none;
}

.attachment-icon {
  margin-right: 16rpx;
  flex-shrink: 0;
}

.attachment-name {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.attachment-action {
  color: #0052d9;
  flex-shrink: 0;
}

/* 确认通知 */
.confirm-section {
  margin-top: 40rpx;
  padding-top: 32rpx;
  border-top: 1rpx solid #eee;
  width: 100%;
  box-sizing: border-box;
}

.confirm-section t-checkbox {
  margin-bottom: 24rpx;
}

/* 已确认状态 */
.confirmed-status {
  margin-top: 40rpx;
  padding-top: 32rpx;
  border-top: 1rpx solid #eee;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  box-sizing: border-box;
}

.confirmed-icon {
  margin-right: 12rpx;
  flex-shrink: 0;
}

.confirmed-text {
  font-size: 28rpx;
  color: #00a870;
} 