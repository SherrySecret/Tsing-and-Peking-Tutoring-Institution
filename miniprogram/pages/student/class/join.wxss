/* pages/student/class/join.wxss */
page {
  background-color: #f5f7fa;
  min-height: 100vh;
}

/* 顶部标题栏 */
.header {
  padding: 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

/* 内容区域 */
.content {
  padding: 30rpx;
}

.container {
  width: 100%;
}

/* 表单卡片 */
.form-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.form-item {
  margin-bottom: 40rpx;
}

.form-label {
  display: block;
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
}

/* 邀请码输入区域 */
.code-input-area {
  display: flex;
  align-items: center;
  border: 1rpx solid #ddd;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 16rpx;
}

.code-input {
  flex: 1;
  height: 48rpx;
  font-size: 32rpx;
  color: #333;
  letter-spacing: 6rpx;
}

.scan-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #0052d9;
}

.form-tips {
  font-size: 24rpx;
  color: #999;
}

/* 学生选择区域 */
.student-select {
  margin-top: 40rpx;
}

.student-list {
  margin-bottom: 30rpx;
}

.student-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.student-info {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}

.student-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-right: 20rpx;
  background-color: #f0f0f0;
}

.student-detail {
  display: flex;
  flex-direction: column;
}

.student-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 6rpx;
}

.student-meta {
  font-size: 24rpx;
  color: #999;
}

/* 添加学生按钮 */
.add-student {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 0;
  color: #0052d9;
  font-size: 28rpx;
}

.add-student text {
  margin-left: 10rpx;
}

/* 按钮区域 */
.action-area {
  padding: 20rpx 0;
}

/* 弹窗样式 */
.popup-content {
  width: 560rpx;
  padding: 60rpx 40rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-radius: 16rpx;
  background-color: #fff;
}

.success-icon {
  margin-bottom: 30rpx;
}

.success-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.success-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 40rpx;
  text-align: center;
}

.popup-btns {
  width: 100%;
} 