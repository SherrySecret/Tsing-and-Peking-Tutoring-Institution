/* pages/student/class/scores.wxss */
page {
  background-color: #f5f7fa;
  height: 100%;
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
  box-sizing: border-box;
}

/* 顶部标题栏 */
.header {
  height: 88rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  padding: 0 32rpx;
  border-bottom: 1rpx solid #eee;
  position: relative;
  z-index: 10;
  width: 100%;
  box-sizing: border-box;
}

.title {
  font-size: 34rpx;
  font-weight: 500;
}

/* 内容区域 */
.content {
  flex: 1;
  overflow: auto;
  -webkit-overflow-scrolling: touch;
  width: 100%;
  box-sizing: border-box;
}

.container {
  padding: 24rpx 32rpx;
  box-sizing: border-box;
  width: 100%;
}

/* 班级信息 */
.class-info {
  margin-bottom: 24rpx;
  width: 100%;
  box-sizing: border-box;
}

.class-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.semester {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
}

/* 卡片通用样式 */
.stats-card, .history-card {
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  margin-bottom: 24rpx;
  overflow: hidden;
  width: 100%;
  box-sizing: border-box;
}

/* 成绩统计卡片 */
.stats-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.stats-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

.stats-selector {
  font-size: 26rpx;
  color: #666;
}

.picker-content {
  display: flex;
  align-items: center;
}

.picker-content text {
  margin-right: 8rpx;
}

.stats-content {
  padding: 24rpx;
  display: flex;
  flex-direction: column;
}

.chart-container {
  width: 100%;
  height: 240rpx; /* 减小图表高度 */
  margin-bottom: 20rpx;
  box-sizing: border-box;
}

.chart-placeholder {
  background-color: #f8f8f8;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
  border-radius: 8rpx;
  font-size: 26rpx;
}

/* 科目成绩滚动容器 */
.subject-scores-container {
  height: 450rpx; /* 增加高度，使至少可以显示4门课程 */
  width: 100%;
  box-sizing: border-box;
}

/* 科目成绩 */
.subject-scores {
  width: 100%;
  box-sizing: border-box;
  padding-top: 10rpx;
}

.subject-item {
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
  width: 100%;
  box-sizing: border-box;
  padding: 10rpx 0;
}

.subject-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.score-bar {
  height: 16rpx;
  background-color: #f0f0f0;
  border-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 8rpx;
  width: 100%;
}

.score-progress {
  height: 100%;
  background-color: #0052d9;
  border-radius: 8rpx;
}

.score-info {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  margin-top: 6rpx;
}

.score-value {
  font-size: 28rpx;
  font-weight: 500;
  color: #0052d9;
}

.score-divider {
  margin: 0 4rpx;
  color: #999;
}

.score-full {
  color: #999;
}

.score-rank {
  font-size: 24rpx;
  color: #666;
  text-align: right;
  margin-top: 4rpx;
}

/* 历史成绩卡片 */
.card-header {
  padding: 20rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.card-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

/* 历史成绩滚动容器 */
.history-container {
  max-height: 400rpx;
  width: 100%;
  box-sizing: border-box;
}

.history-list {
  padding: 0 24rpx;
  width: 100%;
  box-sizing: border-box;
}

.history-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  width: 100%;
  box-sizing: border-box;
}

.history-item:last-child {
  border-bottom: none;
}

.history-info {
  flex: 1;
  min-width: 0; /* 确保文本溢出处理正常工作 */
}

.history-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.history-date {
  font-size: 24rpx;
  color: #999;
}

.history-score {
  margin-right: 16rpx;
  text-align: right;
  flex-shrink: 0;
}

.total-score {
  font-size: 28rpx;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.rank-info {
  font-size: 24rpx;
  color: #999;
}

.history-arrow {
  display: flex;
  align-items: center;
  flex-shrink: 0;
} 