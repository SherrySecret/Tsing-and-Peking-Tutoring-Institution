/* 页面容器 */
page {
  background-color: #f7f8fa;
  height: 100%;
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
  box-sizing: border-box;
}

/* 顶部标题栏 */
.header {
  height: 88rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  padding: 0 32rpx;
  border-bottom: 1rpx solid #eee;
  position: relative;
  z-index: 10;
  width: 100%;
  box-sizing: border-box;
}

.title {
  font-size: 34rpx;
  font-weight: 500;
}

/* 内容区域 */
.content {
  flex: 1;
  display: flex;
  flex-direction: column;
  background-color: #f7f8fa;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
}

/* 作业列表容器 */
.homework-container {
  flex: 1;
  overflow: auto;
  -webkit-overflow-scrolling: touch;
  padding: 0 32rpx;
  box-sizing: border-box;
  width: 100%;
}

/* 作业列表 */
.homework-list {
  padding: 24rpx 0;
  width: 100%;
  box-sizing: border-box;
}

.homework-item {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  border-left: 8rpx solid #999;
  width: 100%;
  box-sizing: border-box;
}

.status-pending {
  border-left-color: #f59e0b;
}

.status-submitted {
  border-left-color: #0052d9;
}

.status-graded {
  border-left-color: #00a870;
}

.homework-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  width: 100%;
}

.homework-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  flex: 1;
  padding-right: 12rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.homework-status {
  min-width: 112rpx;
  text-align: center;
  flex-shrink: 0;
}

.status-text {
  font-size: 24rpx;
  color: #fff;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  background-color: #999;
  white-space: nowrap;
}

.status-pending .status-text {
  background-color: #f59e0b;
}

.status-submitted .status-text {
  background-color: #0052d9;
}

.status-graded .status-text {
  background-color: #00a870;
}

.homework-info {
  display: flex;
  margin-bottom: 16rpx;
  flex-wrap: wrap;
}

.info-item {
  display: flex;
  align-items: center;
  margin-right: 24rpx;
  margin-bottom: 8rpx;
}

.info-text {
  font-size: 26rpx;
  color: #666;
  margin-left: 8rpx;
}

.homework-time {
  background-color: #f7f8fa;
  border-radius: 8rpx;
  padding: 16rpx;
  margin-bottom: 16rpx;
  width: 100%;
  box-sizing: border-box;
}

.time-item {
  display: flex;
  font-size: 26rpx;
  margin-bottom: 8rpx;
}

.time-item:last-child {
  margin-bottom: 0;
}

.time-label {
  color: #666;
  margin-right: 8rpx;
  flex-shrink: 0;
}

.time-value {
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.overdue {
  color: #ef4444;
}

.homework-score {
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.score-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 8rpx;
}

.score-value {
  font-size: 32rpx;
  font-weight: 500;
  color: #ef4444;
}

/* 空内容提示 */
.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 64rpx 32rpx;
  margin-top: 64rpx;
  width: 100%;
  box-sizing: border-box;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-top: 24rpx;
  text-align: center;
} 