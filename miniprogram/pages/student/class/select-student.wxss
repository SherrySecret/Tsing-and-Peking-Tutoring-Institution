/* pages/student/class/select-student.wxss */
page {
  background-color: #f5f7fa;
  height: 100%;
}

/* 顶部标题栏 */
.header {
  padding: 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

/* 内容区域 */
.content {
  padding: 30rpx;
}

.container {
  width: 100%;
}

/* 搜索栏 */
.search-bar {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 16rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.search-inner {
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 24rpx;
  padding: 12rpx 16rpx;
}

.search-inner input {
  flex: 1;
  height: 40rpx;
  margin-left: 8rpx;
  font-size: 28rpx;
}

/* 学生列表 */
.student-list {
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 24rpx;
}

.student-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.student-item:last-child {
  border-bottom: none;
}

.student-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.student-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-right: 20rpx;
  background-color: #f0f0f0;
}

.student-detail {
  display: flex;
  flex-direction: column;
}

.student-name {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.student-meta {
  font-size: 26rpx;
  color: #999;
}

/* 添加新学生按钮 */
.add-student {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  color: #0052d9;
}

.add-student text {
  font-size: 30rpx;
  margin-left: 12rpx;
}

/* 底部按钮 */
.bottom-button {
  margin-top: 40rpx;
  padding-bottom: 40rpx;
} 